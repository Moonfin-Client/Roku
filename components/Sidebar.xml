<?xml version="1.0" encoding="utf-8"?>
<component name="Sidebar" extends="Group">
    <children>
        <Group id="sidebarContent">
            <Rectangle id="sidebarBgSolid" translation="[0, 0]" width="350" height="1080" color="0x000000FF" opacity="0" />
            <Poster id="sidebarBgEdge" translation="[350, 0]" width="120" height="1080" uri="pkg:/images/sidebar-edge-gradient.png" blendColor="0x000000" opacity="0" loadDisplayMode="scaleToFill" />

            <Group id="userSection" translation="[0, 25]">
                <MaskGroup id="avatarMask" maskUri="pkg:/images/icons/circle64.png" maskSize="[48, 48]" translation="[21, 0]">
                    <Poster id="userAvatar" uri="pkg:/images/baseline_person_white_48dp.png" width="48" height="48" loadDisplayMode="scaleToZoom" />
                </MaskGroup>
                <Poster id="userHighlight" uri="pkg:/images/icons/openCircle.png" width="48" height="48" translation="[21, 0]" loadDisplayMode="scaleToZoom" visible="false" />
                <Label id="userName" text="" font="font:SmallBoldSystemFont" color="#FFFFFF" height="48" vertAlign="center" translation="[80, 0]" visible="false" />
            </Group>

            <Group id="navScrollClip" translation="[0, 100]" clippingRect="[0, 0, 350, 830]">
                <Poster id="focusPill" uri="pkg:/images/icons/pill-focus.9.png" width="80" height="56" visible="false" blendColor="0xFFFFFF" opacity="0.15" />
                <Group id="navItemsGroup" />
            </Group>

            <Group id="footerSection" translation="[0, 960]" />
        </Group>

        <Clock id="sidebarClock" translation="[1700, 20]" />

        <Animation id="expandAnim" duration="0.2" repeat="false" easeFunction="outCubic">
            <FloatFieldInterpolator id="bgSolidOpacityExpand" key="[0.0, 1.0]" fieldToInterp="sidebarBgSolid.opacity" />
            <FloatFieldInterpolator id="bgEdgeOpacityExpand" key="[0.0, 1.0]" fieldToInterp="sidebarBgEdge.opacity" />
        </Animation>

        <Animation id="collapseAnim" duration="0.2" repeat="false" easeFunction="outCubic">
            <FloatFieldInterpolator id="bgSolidOpacityCollapse" key="[0.0, 1.0]" fieldToInterp="sidebarBgSolid.opacity" />
            <FloatFieldInterpolator id="bgEdgeOpacityCollapse" key="[0.0, 1.0]" fieldToInterp="sidebarBgEdge.opacity" />
        </Animation>

        <Animation id="focusPillAnim" duration="0.12" repeat="false" easeFunction="outCubic">
            <Vector2DFieldInterpolator id="focusPillPosInterp" key="[0.0, 1.0]" fieldToInterp="focusPill.translation" />
            <FloatFieldInterpolator id="focusPillWidthInterp" key="[0.0, 1.0]" fieldToInterp="focusPill.width" />
        </Animation>

        <Animation id="scrollAnim" duration="0.15" repeat="false" easeFunction="outCubic">
            <Vector2DFieldInterpolator id="scrollPosInterp" key="[0.0, 1.0]" fieldToInterp="navItemsGroup.translation" />
        </Animation>

        <Animation id="slideUp" duration=".5" repeat="false">
            <Vector2DFieldInterpolator key="[0.0, .5]" keyValue="[[0, 0], [-400, 0]]" fieldToInterp="sidebarContent.translation" />
        </Animation>
        <Animation id="slideDown" delay=".2" duration=".5" repeat="false">
            <Vector2DFieldInterpolator key="[0.0, .5]" keyValue="[[-400, 0], [0, 0]]" fieldToInterp="sidebarContent.translation" />
        </Animation>
    </children>

    <interface>
        <function name="highlightUser" />
        <function name="dehighlightUser" />
        <function name="updateShuffleButtonVisibility" />
        <function name="loadLibraries" />
        <field id="currentUserProfileImage" type="string" onChange="updateUserProfileImage" />
        <field id="currentUser" type="string" onChange="updateUser" />
        <field id="showOptions" value="true" type="boolean" />
        <field id="itemSelected" type="string" alwaysNotify="true" />
        <field id="librarySelected" type="node" alwaysNotify="true" />
        <field id="isVisible" value="true" type="boolean" onChange="onVisibleChange" />
        <field id="disableMoveAnimation" value="false" type="boolean" />
        <field id="shufflePressed" type="boolean" alwaysNotify="true" />
        <field id="favoritesPressed" type="boolean" alwaysNotify="true" />
        <field id="genresPressed" type="boolean" alwaysNotify="true" />
    </interface>
</component>