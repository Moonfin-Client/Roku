<?xml version="1.0" encoding="utf-8"?>
<component name="MediaBar" extends="Group">
    <children>
        <!-- Note: Backdrop is managed by parent Home component, not locally -->

        <!-- Logo image (top-left, with margin) -->
        <Poster
            id="logoImage"
            translation="[60, 40]"
            width="400"
            height="120"
            uri=""
            loadDisplayMode="scaleToFit"
            visible="false"
        />

        <!-- Title text (if no logo available) -->
        <Label
            id="titleText"
            translation="[60, 40]"
            width="800"
            height="80"
            text=""
            font="font:LargeBoldSystemFont"
            color="0xFFFFFFFF"
            wrap="true"
            numLines="2"
            visible="false"
        />

        <!-- Info overlay content with background box -->
        <Poster
            id="infoBackground"
            translation="[150, 404]"
            width="1170"
            height="140"
            uri="pkg:/images/icons/info-box-bg-white.png"
            loadDisplayMode="scaleToFit"
        />

        <LayoutGroup
            id="infoOverlayContent"
            translation="[170, 419]"
            layoutDirection="vert"
            itemSpacings="[8]">
            <!-- Metadata row (year, rating, runtime, stars) -->
            <LayoutGroup
                id="metadataRow"
                layoutDirection="horiz"
                itemSpacings="[18]"
            >
                <Label id="yearLabel" font="font:MediumBoldSystemFont" color="0xFFFFFFFF" text="" />
                <Label
                    id="separatorDot1"
                    font="font:SmallSystemFont"
                    color="0xFFFFFFFF"
                    text="•"
                    visible="false"
                />
                <Label id="ratingLabel" font="font:MediumBoldSystemFont" color="0xFFFFFFFF" text="" />
                <Label
                    id="separatorDot2"
                    font="font:SmallSystemFont"
                    color="0xFFFFFFFF"
                    text="•"
                    visible="false"
                />
                <Label id="runtimeLabel" font="font:MediumBoldSystemFont" color="0xFFFFFFFF" text="" />
                <Label
                    id="separatorDot3"
                    font="font:SmallSystemFont"
                    color="0xFFFFFFFF"
                    text="•"
                    visible="false"
                />
                <Label id="starLabel" font="font:MediumBoldSystemFont" color="0xFFD700FF" text="★" visible="false" />
                <Label id="communityRatingLabel" font="font:MediumBoldSystemFont" color="0xFFFFFFFF" text="" />
            </LayoutGroup>

            <!-- Genres -->
            <Label
                id="genresLabel"
                font="font:SmallBoldSystemFont"
                color="0xFFFFFFFF"
                width="1130"
                wrap="true"
                text=""
            />

            <!-- Overview (3 lines max) -->
            <Label
                id="overviewLabel"
                width="1130"
                font="font:SmallSystemFont"
                color="0xFFFFFFFF"
                wrap="true"
                numLines="3"
                ellipsizeOnBoundary="true"
                text=""
            />
        </LayoutGroup>        <!-- Left navigation arrow -->
        <Group
            id="leftArrow"
            translation="[40, 293]"
            visible="false"
        >
            <Poster
                id="leftArrowBg"
                width="48"
                height="48"
                uri="pkg:/images/icons/circle-bg-white.png"
                loadDisplayMode="scaleToFit"
            />
            <Poster
                width="48"
                height="48"
                uri="pkg:/images/icons/chevron-left.png"
                loadDisplayMode="scaleToFit"
            />
        </Group>

        <!-- Right navigation arrow -->
        <Group
            id="rightArrow"
            translation="[1832, 293]"
            visible="false"
        >
            <Poster
                id="rightArrowBg"
                width="48"
                height="48"
                uri="pkg:/images/icons/circle-bg-white.png"
                loadDisplayMode="scaleToFit"
            />
            <Poster
                width="48"
                height="48"
                uri="pkg:/images/icons/chevron-right.png"
                loadDisplayMode="scaleToFit"
            />
        </Group>

        <!-- Pause indicator (shows when paused) -->
        <Group
            id="pauseIndicator"
            translation="[920, 100]"
            visible="false"
        >
            <Rectangle
                width="80"
                height="40"
                color="0x000000"
                opacity="0.8"
            />
            <Label
                translation="[12, 8]"
                text="PAUSED"
                font="font:SmallBoldSystemFont"
                color="0xFFFFFFFF"
            />
        </Group>

        <Poster
            id="dotsBackground"
            translation="[860, 505]"
            width="215"
            height="35"
            uri="pkg:/images/icons/navbar.png"
            loadDisplayMode="scaleToFit"
        />
        <LayoutGroup
            id="indicatorDots"
            translation="[910, 670]"
            layoutDirection="horiz"
            itemSpacings="[10]"
        >
            <Poster
                width="20"
                height="20"
                uri="pkg:/images/icons/circle-bg-white.png"
                loadDisplayMode="scaleToFit"
            />
            <Poster
                width="20"
                height="20"
                uri="pkg:/images/icons/circle-bg-white.png"
                loadDisplayMode="scaleToFit"
            />
            <Poster
                width="20"
                height="20"
                uri="pkg:/images/icons/circle-bg-white.png"
                loadDisplayMode="scaleToFit"
            />
        </LayoutGroup>
        <!-- Fade animations removed - backdrop managed by parent -->
    </children>

    <interface>
        <field id="itemSelected" type="node" alwaysNotify="true" />
        <field id="itemsLoaded" type="boolean" value="false" />
        <field id="hasFocus" type="boolean" value="false" alwaysNotify="true" />
        <field id="currentBackdrop" type="string" alwaysNotify="true" />
    </interface>
</component>