<?xml version="1.0" encoding="utf-8"?>
<component name="HomeItem" extends="Group">
  <children>
    <Group id="scaleGroup">
      <Rectangle id="backdrop" width="180" height="270" translation="[0,23]" />
      <Poster id="itemIcon" width="80" height="80" translation="[50,118]" loadDisplayMode="scaleToFit" />
      <Poster id="itemPoster" width="180" height="270" translation="[0,23]" loadDisplayMode="scaleToZoom" />
      <PlayedCheckmark id="playedIndicator" translation="[138, 26]" />

      <Rectangle id="progressBackground" visible="false" width="180" height="6" translation="[0,287]">
        <Rectangle id="progress" width="0" height="6" />
      </Rectangle>

      <ScrollingText id="itemText" horizAlign="center" vertAlign="center" font="font:SmallBoldSystemFont" height="64" maxWidth="172" translation="[8,299]" repeatCount="0" />
    </Group>

    <Animation id="showProgressBar" duration="0.5" repeat="false" easeFunction="linear">
      <FloatFieldInterpolator id="showProgressBarField" key="[0.0, 1.0]" fieldToInterp="progress.width" />
    </Animation>

    <Animation id="focusAnimation" duration="0.1" repeat="false" easeFunction="outCubic">
      <Vector2DFieldInterpolator id="focusScaleInterp" key="[0.0, 1.0]" keyValue="[[1.0, 1.0], [1.1, 1.1]]" fieldToInterp="scaleGroup.scale" />
    </Animation>

    <Animation id="unfocusAnimation" duration="0.1" repeat="false" easeFunction="inCubic">
      <Vector2DFieldInterpolator id="unfocusScaleInterp" key="[0.0, 1.0]" keyValue="[[1.1, 1.1], [1.0, 1.0]]" fieldToInterp="scaleGroup.scale" />
    </Animation>
  </children>
  <interface>
    <field id="itemContent" type="node" onChange="itemContentChanged" />
    <field id="itemHasFocus" type="boolean" onChange="focusChanged" />
  </interface>
</component>