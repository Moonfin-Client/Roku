<?xml version="1.0" encoding="utf-8"?>
<component name="Home" extends="JFScreen">
  <children>
    <!-- Previous backdrop that stays visible until new one loads -->
    <Poster id="backdropPrev" loadDisplayMode="scaleToFill" width="1920" height="1080" opacity="0.3" />

    <!-- Main backdrop with high quality scaling -->
    <Poster id="backdrop" loadDisplayMode="scaleToFill" width="1920" height="1080" opacity="0.3" />

    <!-- Color tint/scrim overlay for readability - 95% black -->
    <Rectangle id="backdropTint" width="1920" height="1080" color="#F2000000" opacity="1.0" />

    <!-- Top details section for focused item -->
    <Group id="detailsSection" translation="[100, 180]">
      <ScrollingText id="itemTitle" translation="[0, 0]" font="font:LargeBoldSystemFont" maxWidth="1720" repeatCount="-1" />

      <!-- Movie metadata row: â˜… Rating â€¢ ðŸ… Critic% â€¢ Year â€¢ Rating â€¢ Runtime -->
      <LayoutGroup id="movieMetadataRow" translation="[0, 70]" layoutDirection="horiz" horizAlignment="left" vertAlignment="center" itemSpacings="[15]">
        <LayoutGroup id="communityRatingGroup" layoutDirection="horiz" itemSpacings="[5]" visible="false">
          <Poster id="star" uri="pkg:/images/sharp_star_white_18dp.png" height="28" width="28" blendColor="#FFD700" />
          <Text id="communityRating" font="font:MediumSystemFont" color="#CCCCCC" />
        </LayoutGroup>
        <Text id="dot1" font="font:MediumSystemFont" text="â€¢" color="#CCCCCC" visible="false" />
        <Poster id="criticRatingIcon" height="28" width="28" />
        <Text id="criticRatingLabel" font="font:MediumSystemFont" color="#CCCCCC" />
        <Text id="dot2" font="font:MediumSystemFont" text="â€¢" color="#CCCCCC" visible="false" />
        <Text id="releaseYear" font="font:MediumSystemFont" color="#CCCCCC" />
        <Text id="dot3" font="font:MediumSystemFont" text="â€¢" color="#CCCCCC" visible="false" />
        <Text id="officialRating" font="font:MediumBoldSystemFont" color="#CCCCCC" />
        <Text id="dot4" font="font:MediumSystemFont" text="â€¢" color="#CCCCCC" visible="false" />
        <Text id="runtime" font="font:MediumSystemFont" color="#CCCCCC" />
      </LayoutGroup>

      <!-- TV Show metadata row: â˜… Rating â€¢ Year â€¢ Status â€¢ Rating â€¢ Runtime -->
      <LayoutGroup id="showMetadataRow" translation="[0, 70]" layoutDirection="horiz" horizAlignment="left" vertAlignment="center" itemSpacings="[15]">
        <LayoutGroup id="showCommunityRatingGroup" layoutDirection="horiz" itemSpacings="[5]" visible="false">
          <Poster id="showStar" uri="pkg:/images/sharp_star_white_18dp.png" height="28" width="28" blendColor="#FFD700" />
          <Text id="showCommunityRating" font="font:MediumSystemFont" color="#CCCCCC" />
        </LayoutGroup>
        <Text id="showDot1" font="font:MediumSystemFont" text="â€¢" color="#CCCCCC" visible="false" />
        <Text id="showReleaseYear" font="font:MediumSystemFont" color="#CCCCCC" />
        <Text id="showDot2" font="font:MediumSystemFont" text="â€¢" color="#CCCCCC" visible="false" />
        <Text id="showStatus" font="font:MediumSystemFont" color="#CCCCCC" />
        <Text id="showDot3" font="font:MediumSystemFont" text="â€¢" color="#CCCCCC" visible="false" />
        <Text id="showOfficialRating" font="font:MediumBoldSystemFont" color="#CCCCCC" />
        <Text id="showDot4" font="font:MediumSystemFont" text="â€¢" color="#CCCCCC" visible="false" />
        <Text id="showRuntime" font="font:MediumSystemFont" color="#CCCCCC" />
      </LayoutGroup>

      <!-- Episode metadata row: Air Date â€¢ Runtime â€¢ S##E## -->
      <LayoutGroup id="episodeMetadataRow" translation="[0, 70]" layoutDirection="horiz" horizAlignment="left" vertAlignment="center" itemSpacings="[15]">
        <Text id="episodeAirDate" font="font:MediumSystemFont" color="#CCCCCC" />
        <Text id="episodeDot1" font="font:MediumSystemFont" text="â€¢" color="#CCCCCC" visible="false" />
        <Text id="episodeRuntime" font="font:MediumSystemFont" color="#CCCCCC" />
        <Text id="episodeDot2" font="font:MediumSystemFont" text="â€¢" color="#CCCCCC" visible="false" />
        <Text id="episodeNumber" font="font:MediumSystemFont" color="#CCCCCC" />
      </LayoutGroup>

      <Text id="itemOverview" translation="[0, 113]" font="font:SmallSystemFont" width="1720" wrap="true" maxLines="4" lineSpacing="-5" />
    </Group>

    <!-- Media carousel bar -->
    <MediaBar
      id="mediaBar"
      translation="[0, 223]"
      visible="false" />

    <HomeRows
      id="homeRows"
      translation="[111, 450]"
      showRowLabel="true"
      vertFocusAnimationStyle="fixedFocus"
      rowFocusAnimationStyle="fixedFocus"
      itemComponentName="HomeItem"
      numRows="2"
      rowLabelOffset="[[0,20]]"
      focusBitmapUri="pkg:/images/hd_focus.9.png" />
    <OptionsSlider id="options" />

    <Animation id="toggleButtonsAnimation" duration=".7" repeat="false" easeFunction="linear">
      <FloatFieldInterpolator id="buttonsFade" key="[0.0, .6]" keyValue="[1.00, 0.00]" fieldToInterp="buttons.opacity" />
      <Vector2DFieldInterpolator id="buttonsMove" key="[0.1, .9]" keyValue="[[100, 100], [100, 0]]" fieldToInterp="buttons.translation" />
    </Animation>

    <Animation id="backdropFadeIn" duration="0.5" repeat="false" easeFunction="inOutQuad">
      <FloatFieldInterpolator id="backdropFadeInInterp" key="[0.0, 1.0]" keyValue="[0.0, 1.0]" fieldToInterp="backdrop.opacity" />
    </Animation>

    <Animation id="backdropPrevFadeOut" duration="0.5" repeat="false" easeFunction="inOutQuad">
      <FloatFieldInterpolator id="backdropPrevFadeOutInterp" key="[0.0, 1.0]" keyValue="[1.0, 0.0]" fieldToInterp="backdropPrev.opacity" />
    </Animation>

  </children>
  <interface>
    <field id="playlistData" type="array" />
    <field id="selectedItem" alias="homeRows.selectedItem" alwaysNotify="true" />
    <field id="quickPlayNode" alias="homeRows.quickPlayNode" />
    <field id="shuffleSelectedItem" type="node" alwaysNotify="true" />
    <function name="refresh" />
    <function name="loadLibraries" />
  </interface>
</component>