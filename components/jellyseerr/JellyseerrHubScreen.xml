<?xml version="1.0" encoding="utf-8"?>
<component name="JellyseerrHubScreen" extends="JFScreen">

    <children>
        <Poster id="backgroundPoster" uri="pkg:/images/Overhang_Background_SD_2.jpg" width="1920" height="1080" opacity="0.3" />

        <Label id="titleLabel"
            text="Jellyseerr"
            font="font:LargeBoldSystemFont"
            translation="[60, 100]" />

        <Label id="statusLabel"
            font="font:MediumSystemFont"
            translation="[60, 170]"
            width="1800" />

        <Group id="menuGroup" translation="[200, 300]">
            <StandardButton id="discoverButton" text="Discover" translation="[0, 0]" width="350" />
            <StandardButton id="myRequestsButton" text="My Requests" translation="[400, 0]" width="350" />
            <StandardButton id="settingsButton" text="Settings" translation="[800, 0]" width="350" />
        </Group>

        <Label id="warningLabel"
            text="Jellyseerr not configured. Please go to Settings."
            font="font:MediumSystemFont"
            translation="[200, 500]"
            width="1500"
            wrap="true"
            visible="false"
            color="0xFF6666FF" />
    </children>
</component>