<?xml version="1.0" encoding="utf-8"?>
<component name="JellyseerrCastDetails" extends="JFScreen">

    <interface>
        <field id="personId" type="integer" />
        <field id="personName" type="string" />
    </interface>

    <children>
        <!-- Background color -->
        <Rectangle width="1920" height="1080" color="#111827" />

        <!-- Color tint overlay -->
        <Rectangle width="1920" height="1080" color="#F2000000" opacity="1.0" />

        <!-- Scrollable viewport -->
        <Rectangle
            id="viewport"
            width="1920"
            height="1080"
            color="#00000000"
            clippingRect="[0, 0, 1920, 1080]">

            <!-- Content container that can be scrolled -->
            <Group id="content" translation="[0, 0]">
                <!-- Profile image positioned at top left -->
                <Group id="profileGroup" translation="[80, 120]">
                    <Rectangle
                        width="350"
                        height="525"
                        color="#1F2937" />
                    <Poster id="profileImage"
                        width="350"
                        height="525"
                        loadDisplayMode="scaleToFit"
                        failedBitmapUri="pkg:/images/media_type_icons/person.png" />
                </Group>

                <!-- Info section to the right of profile -->
                <Group id="infoGroup" translation="[480, 120]">
                    <!-- Person name -->
                    <Label id="personName"
                        width="1360"
                        font="font:LargeBoldSystemFont"
                        color="#FFFFFF"
                        wrap="true"
                        maxLines="2" />

                    <!-- Birth info (DOB, Place of Birth) -->
                    <Label id="birthInfo"
                        translation="[0, 70]"
                        width="1360"
                        font="font:MediumSystemFont"
                        color="#D1D5DB"
                        wrap="true"
                        maxLines="2" />

                    <!-- Biography -->
                    <Label id="biography"
                        translation="[0, 140]"
                        width="1360"
                        font="font:SmallSystemFont"
                        color="#9CA3AF"
                        wrap="true" />
                </Group>

                <!-- Filmography Section -->
                <Group id="filmographySection" translation="[80, 720]">
                    <Label id="filmographyHeading"
                        text="Appearances"
                        font="font:MediumBoldSystemFont"
                        color="#FFFFFF"
                        visible="false" />

                    <MarkupGrid id="filmographyGrid"
                        translation="[0, 50]"
                        visible="false"
                        itemComponentName="JellyseerrPoster"
                        numColumns="9"
                        numRows="3"
                        itemSize="[180, 316]"
                        itemSpacing="[24, 24]"
                        vertFocusAnimationStyle="floatingFocus"
                        drawFocusFeedback="false" />
                </Group>

                <!-- Known For Section (moved below filmography) -->
                <Group id="knownForSection" translation="[80, 1400]">
                    <Label id="knownForHeading"
                        text="Known For (Top Picks)"
                        font="font:MediumBoldSystemFont"
                        color="#FFFFFF"
                        visible="false" />

                    <RowList id="knownForRow"
                        translation="[0, 40]"
                        visible="false"
                        itemComponentName="JellyseerrPoster"
                        numRows="1"
                        itemSize="[1760, 400]"
                        itemSpacing="[0, 0]"
                        drawFocusFeedback="false" />
                </Group>
            </Group>
        </Rectangle>

        <!-- Invisible focus holder to capture focus when screen is shown -->
        <Rectangle
            id="focusHolder"
            width="1920"
            height="1080"
            color="#00000000"
            opacity="0"
            focusable="true" />

        <!-- Loading indicator -->
        <Label id="loadingLabel"
            translation="[860, 500]"
            text="Loading..."
            font="font:LargeSystemFont"
            color="#FFFFFF"
            visible="false" />

        <!-- Error message -->
        <Label id="errorLabel"
            translation="[860, 500]"
            font="font:LargeSystemFont"
            color="#EF4444"
            horizAlign="center"
            vertAlign="center"
            visible="false" />
    </children>
</component>