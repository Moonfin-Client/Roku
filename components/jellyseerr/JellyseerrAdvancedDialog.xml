<?xml version="1.0" encoding="utf-8"?>
<component name="JellyseerrAdvancedDialog" extends="Group">
    <children>
        <!-- Semi-transparent overlay -->
        <Rectangle id="overlay"
            width="1920"
            height="1080"
            color="#000000"
            opacity="0.7" />

        <!-- Dialog box -->
        <Rectangle id="dialogBg"
            translation="[460, 180]"
            width="1000"
            height="720"
            color="#1F2937" />

        <!-- Dialog content -->
        <Group id="dialogContent" translation="[460, 180]">
            <!-- Title -->
            <Label id="titleLabel"
                translation="[50, 30]"
                text="Advanced Request Options"
                font="font:LargeBoldSystemFont"
                color="#FFFFFF" />

            <!-- Loading indicator -->
            <Group id="loadingGroup" translation="[450, 350]" visible="false">
                <BusySpinner id="loadingSpinner" />
                <Label id="loadingLabel"
                    translation="[50, 0]"
                    text="Loading options..."
                    font="font:MediumSystemFont"
                    color="#9CA3AF" />
            </Group>

            <!-- Error message -->
            <Label id="errorLabel"
                translation="[50, 350]"
                text=""
                font="font:MediumSystemFont"
                color="#EF4444"
                width="900"
                wrap="true"
                visible="false" />

            <!-- Options container -->
            <LayoutGroup id="optionsContainer"
                translation="[50, 100]"
                layoutDirection="vert"
                itemSpacings="[25]">

                <!-- Server selection -->
                <Group id="serverGroup">
                    <Label id="serverLabel"
                        translation="[0, 0]"
                        text="Server"
                        font="font:MediumBoldSystemFont"
                        color="#FFFFFF" />
                    <Group id="serverSelector" translation="[0, 35]">
                        <Rectangle id="serverBg"
                            width="900"
                            height="60"
                            color="#374151" />
                        <Rectangle id="serverBgFocused"
                            width="900"
                            height="60"
                            color="#4F46E5"
                            visible="false" />
                        <Label id="serverValueLabel"
                            translation="[20, 17]"
                            text="Default Server"
                            font="font:MediumSystemFont"
                            color="#FFFFFF"
                            width="820" />
                        <Label id="serverArrow"
                            translation="[860, 17]"
                            text="▼"
                            font="font:SmallSystemFont"
                            color="#9CA3AF" />
                    </Group>
                </Group>

                <!-- Quality Profile selection -->
                <Group id="profileGroup">
                    <Label id="profileLabel"
                        translation="[0, 0]"
                        text="Quality Profile"
                        font="font:MediumBoldSystemFont"
                        color="#FFFFFF" />
                    <Group id="profileSelector" translation="[0, 35]">
                        <Rectangle id="profileBg"
                            width="900"
                            height="60"
                            color="#374151" />
                        <Rectangle id="profileBgFocused"
                            width="900"
                            height="60"
                            color="#4F46E5"
                            visible="false" />
                        <Label id="profileValueLabel"
                            translation="[20, 17]"
                            text="Default Profile"
                            font="font:MediumSystemFont"
                            color="#FFFFFF"
                            width="820" />
                        <Label id="profileArrow"
                            translation="[860, 17]"
                            text="▼"
                            font="font:SmallSystemFont"
                            color="#9CA3AF" />
                    </Group>
                </Group>

                <!-- Root Folder selection -->
                <Group id="rootFolderGroup">
                    <Label id="rootFolderLabel"
                        translation="[0, 0]"
                        text="Root Folder"
                        font="font:MediumBoldSystemFont"
                        color="#FFFFFF" />
                    <Group id="rootFolderSelector" translation="[0, 35]">
                        <Rectangle id="rootFolderBg"
                            width="900"
                            height="60"
                            color="#374151" />
                        <Rectangle id="rootFolderBgFocused"
                            width="900"
                            height="60"
                            color="#4F46E5"
                            visible="false" />
                        <Label id="rootFolderValueLabel"
                            translation="[20, 17]"
                            text="Default Folder"
                            font="font:MediumSystemFont"
                            color="#FFFFFF"
                            width="820" />
                        <Label id="rootFolderArrow"
                            translation="[860, 17]"
                            text="▼"
                            font="font:SmallSystemFont"
                            color="#9CA3AF" />
                    </Group>
                </Group>
            </LayoutGroup>

            <!-- Buttons -->
            <LayoutGroup id="buttonsGroup"
                translation="[50, 600]"
                layoutDirection="horiz"
                itemSpacings="[30]">

                <!-- Submit button -->
                <Group id="submitButton">
                    <Rectangle id="submitBg"
                        width="200"
                        height="60"
                        color="#374151" />
                    <Rectangle id="submitBgFocused"
                        width="200"
                        height="60"
                        color="#10B981"
                        visible="false" />
                    <Label id="submitLabel"
                        width="200"
                        height="60"
                        text="Submit"
                        font="font:MediumBoldSystemFont"
                        color="#FFFFFF"
                        horizAlign="center"
                        vertAlign="center" />
                </Group>

                <!-- Cancel button -->
                <Group id="cancelButton">
                    <Rectangle id="cancelBg"
                        width="200"
                        height="60"
                        color="#374151" />
                    <Rectangle id="cancelBgFocused"
                        width="200"
                        height="60"
                        color="#EF4444"
                        visible="false" />
                    <Label id="cancelLabel"
                        width="200"
                        height="60"
                        text="Cancel"
                        font="font:MediumBoldSystemFont"
                        color="#FFFFFF"
                        horizAlign="center"
                        vertAlign="center" />
                </Group>
            </LayoutGroup>

            <!-- Instructions -->
            <Label id="instructionsLabel"
                translation="[50, 680]"
                text="Use &lt; &gt; to change selection - OK to confirm - Back to cancel"
                font="font:SmallSystemFont"
                color="#6B7280" />
        </Group>
    </children>

    <interface>
        <!-- Input: Media type (movie/tv) and quality (hd/4k) -->
        <field id="mediaType" type="string" value="movie" />
        <field id="is4k" type="boolean" value="false" />

        <!-- Output: Selected options -->
        <field id="selectedServerId" type="integer" value="-1" />
        <field id="selectedProfileId" type="integer" value="-1" />
        <field id="selectedRootFolderId" type="integer" value="-1" />
        <field id="selectedRootFolderPath" type="string" value="" />
        <field id="wasSubmitted" type="boolean" value="false" alwaysNotify="true" />
        <field id="wasCancelled" type="boolean" value="false" alwaysNotify="true" />
    </interface>

</component>