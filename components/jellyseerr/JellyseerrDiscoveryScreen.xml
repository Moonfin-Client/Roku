<?xml version="1.0" encoding="utf-8"?>
<component name="JellyseerrDiscoveryScreen" extends="JFScreen">

    <children>
        <!-- Background color -->
        <Rectangle width="1920" height="1080" color="#111827" />

        <Poster id="backdropPrev" loadDisplayMode="scaleToZoom" width="1920" height="1080" opacity="0.0" />
        <Poster id="backdrop" loadDisplayMode="scaleToZoom" width="1920" height="1080" opacity="0.0" />

        <Rectangle id="backdropTint" width="1920" height="1080" color="#F2000000" opacity="1.0" />

        <!-- Top details section for focused item -->
        <LayoutGroup id="detailsSection" translation="[100, 180]" layoutDirection="vert" itemSpacings="[15]">
            <Text id="itemTitle" font="font:LargeBoldSystemFont" width="1720" wrap="true" maxLines="2" />

            <!-- Single metadata row with all info -->
            <Text id="metadataText" font="font:SmallSystemFont" color="#FFFFFF" width="1720" />

            <Text id="itemOverview" font="font:MediumSystemFont" width="1720" wrap="true" maxLines="4" lineSpacing="-5" />
        </LayoutGroup>

        <RowList id="categoryRows"
            itemComponentName="JellyseerrPoster"
            showRowLabel="[true]"
            showRowCounter="[true]"
            translation="[111, 450]"
            vertFocusAnimationStyle="fixedFocus"
            rowFocusAnimationStyle="fixedFocus"
            numRows="2"
            visible="true"
            drawFocusFeedback="true"
            itemSize="[1703, 380]"
            itemSpacing="[0, 60]" />

        <Label id="loadingLabel"
            text="Loading..."
            font="font:LargeSystemFont"
            translation="[960, 540]"
            horizAlign="center"
            vertAlign="center"
            visible="false" />

        <Label id="errorLabel"
            text=""
            font="font:MediumSystemFont"
            translation="[60, 100]"
            width="1800"
            wrap="true"
            visible="false" />
        <Animation id="backdropFadeIn" duration="0.5" repeat="false" easeFunction="inOutQuad">
            <FloatFieldInterpolator id="backdropFadeInInterp" key="[0.0, 1.0]" keyValue="[0.0, 1.0]" fieldToInterp="backdrop.opacity" />
        </Animation>

        <Animation id="backdropPrevFadeOut" duration="0.5" repeat="false" easeFunction="inOutQuad">
            <FloatFieldInterpolator id="backdropPrevFadeOutInterp" key="[0.0, 1.0]" keyValue="[1.0, 0.0]" fieldToInterp="backdropPrev.opacity" />
        </Animation>
    </children>
    <interface>
        <function name="showLoading" />
        <function name="hideLoading" />
        <function name="showError" />
    </interface>
</component>