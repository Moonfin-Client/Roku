<?xml version="1.0" encoding="utf-8"?>
<component name="JellyseerrQualityDialog" extends="Group">
    <children>
        <!-- Semi-transparent overlay -->
        <Rectangle id="overlay"
            width="1920"
            height="1080"
            color="#000000"
            opacity="0.7" />

        <!-- Dialog box -->
        <Rectangle id="dialogBg"
            translation="[610, 280]"
            width="700"
            height="520"
            color="#1F2937" />

        <!-- Dialog content -->
        <Group id="dialogContent" translation="[610, 280]">
            <!-- Title -->
            <Label id="titleLabel"
                translation="[50, 40]"
                text="Select Quality"
                font="font:LargeBoldSystemFont"
                color="#FFFFFF" />

            <!-- Description -->
            <Label id="descriptionLabel"
                translation="[50, 110]"
                text="Choose the quality for your request:"
                font="font:MediumSystemFont"
                color="#9CA3AF"
                width="600"
                wrap="true" />

            <!-- Quality options -->
            <LayoutGroup id="optionsGroup"
                translation="[50, 180]"
                layoutDirection="vert"
                itemSpacings="[30]">

                <!-- HD Option -->
                <Group id="hdOption">
                    <Rectangle id="hdBg"
                        width="600"
                        height="70"
                        color="#374151" />
                    <Rectangle id="hdBgFocused"
                        width="600"
                        height="70"
                        color="#4F46E5"
                        visible="false" />
                    <Poster id="hdIcon"
                        translation="[20, 19]"
                        uri="pkg:/images/icons/request_hd.png"
                        width="32"
                        height="32" />
                    <Label id="hdLabel"
                        translation="[70, 22]"
                        text="Request HD"
                        font="font:MediumBoldSystemFont"
                        color="#FFFFFF" />
                </Group>

                <!-- 4K Option -->
                <Group id="fourKOption">
                    <Rectangle id="fourKBg"
                        width="600"
                        height="70"
                        color="#374151" />
                    <Rectangle id="fourKBgFocused"
                        width="600"
                        height="70"
                        color="#4F46E5"
                        visible="false" />
                    <Poster id="fourKIcon"
                        translation="[20, 19]"
                        uri="pkg:/images/icons/request_4k.png"
                        width="32"
                        height="32" />
                    <Label id="fourKLabel"
                        translation="[70, 22]"
                        text="Request 4K"
                        font="font:MediumBoldSystemFont"
                        color="#FFFFFF" />
                </Group>

                <!-- Both Option -->
                <Group id="bothOption">
                    <Rectangle id="bothBg"
                        width="600"
                        height="70"
                        color="#374151" />
                    <Rectangle id="bothBgFocused"
                        width="600"
                        height="70"
                        color="#4F46E5"
                        visible="false" />
                    <Poster id="bothIcon"
                        translation="[20, 19]"
                        uri="pkg:/images/icons/request_4k.png"
                        width="32"
                        height="32" />
                    <Label id="bothLabel"
                        translation="[70, 22]"
                        text="Request Both HD + 4K"
                        font="font:MediumBoldSystemFont"
                        color="#FFFFFF" />
                </Group>
            </LayoutGroup>

            <!-- Cancel hint -->
            <Label id="cancelHint"
                translation="[50, 480]"
                text="Press Back to cancel"
                font="font:SmallSystemFont"
                color="#6B7280" />
        </Group>
    </children>

    <interface>
        <field id="showBothOption" type="boolean" value="true" />
        <field id="hdStatus" type="integer" value="0" />
        <field id="status4k" type="integer" value="0" />
        <field id="canRequestHD" type="boolean" value="true" />
        <field id="canRequest4K" type="boolean" value="true" />
        <field id="selectedQuality" type="string" value="" />
        <field id="wasCancelled" type="boolean" value="false" alwaysNotify="true" />
    </interface>

</component>