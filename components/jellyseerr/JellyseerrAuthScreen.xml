<?xml version="1.0" encoding="utf-8"?>
<component name="JellyseerrAuthScreen" extends="JFScreen">
    <script type="text/brightscript" uri="pkg:/source/utils/JellyseerrUtils.bs" />

    <children>
        <Poster id="backgroundPoster" uri="pkg:/images/Overhang_Background_SD_2.jpg" width="1920" height="1080" opacity="0.3" />

        <Label id="titleLabel"
            text="Jellyseerr Authentication"
            font="font:LargeSystemFont"
            translation="[60, 100]" />

        <Group id="contentGroup" translation="[100, 200]">
            <!-- Auth Method Selection -->
            <Label id="methodLabel" text="Authentication Method:" font="font:MediumSystemFont" translation="[0, 0]" width="1700" />
            <Group id="authMethodGroup" translation="[0, 50]">
                <StandardButton id="apiKeyMethodButton" text="API Key (Recommended)" translation="[0, 0]" width="400" />
                <StandardButton id="jellyfinMethodButton" text="Jellyfin Login" translation="[450, 0]" width="400" />
                <StandardButton id="localMethodButton" text="Jellyseerr Login" translation="[900, 0]" width="400" />
            </Group>

            <!-- API Key Fields -->
            <Group id="apiKeyGroup" translation="[0, 150]" visible="false">
                <Label id="apiKeyInfoLabel"
                    text="Find your API key in Jellyseerr: Settings → Profile → API Key"
                    font="font:SmallSystemFont"
                    translation="[0, 0]"
                    width="1700"
                    wrap="true" />

                <Label id="apiKeyLabel" text="API Key:" font="font:MediumSystemFont" translation="[0, 60]" width="250" />
                <StandardButton id="apiKeyInput" text="Enter API Key" translation="[260, 60]" width="600" />
                <StandardButton id="connectApiButton" text="Connect" translation="[900, 60]" width="300" />
            </Group>

            <!-- Jellyfin Login Fields -->
            <Group id="jellyfinGroup" translation="[0, 150]" visible="false">
                <Label id="jellyfinInfoLabel"
                    text="Use your Jellyfin server credentials. Cookie expires after ~30 days."
                    font="font:SmallSystemFont"
                    translation="[0, 0]"
                    width="1700"
                    wrap="true" />

                <Label id="jellyfinUserLabel" text="Jellyfin Username:" font="font:MediumSystemFont" translation="[0, 60]" width="250" />
                <StandardButton id="jellyfinUserInput" text="Enter Username" translation="[260, 60]" width="600" />

                <Label id="jellyfinPassLabel" text="Jellyfin Password:" font="font:MediumSystemFont" translation="[0, 130]" width="250" />
                <StandardButton id="jellyfinPassInput" text="Enter Password" translation="[260, 130]" width="600" />

                <StandardButton id="connectJellyfinButton" text="Connect with Jellyfin" translation="[0, 200]" width="400" />
            </Group>

            <!-- Jellyseerr Login Fields -->
            <Group id="localGroup" translation="[0, 150]" visible="false">
                <Label id="localInfoLabel"
                    text="Use your Jellyseerr account credentials. Provides permanent API key access."
                    font="font:SmallSystemFont"
                    translation="[0, 0]"
                    width="1700"
                    wrap="true" />

                <Label id="localEmailLabel" text="Jellyseerr Email:" font="font:MediumSystemFont" translation="[0, 60]" width="250" />
                <StandardButton id="localEmailInput" text="Enter Email" translation="[260, 60]" width="600" />

                <Label id="localPassLabel" text="Jellyseerr Password:" font="font:MediumSystemFont" translation="[0, 130]" width="250" />
                <StandardButton id="localPassInput" text="Enter Password" translation="[260, 130]" width="600" />

                <StandardButton id="connectLocalButton" text="Login to Jellyseerr" translation="[0, 200]" width="400" />
            </Group>

            <!-- Status/Result -->
            <Label id="statusLabel"
                text=""
                font="font:MediumSystemFont"
                translation="[0, 400]"
                width="1700"
                height="200"
                wrap="true"
                visible="false" />
        </Group>

        <!-- Back Button -->
        <StandardButton id="backButton" text="Back to Settings" translation="[100, 950]" width="350" />
    </children>
</component>