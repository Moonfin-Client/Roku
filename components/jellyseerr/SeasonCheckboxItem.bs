sub init()
    m.checkmark = m.top.findNode("checkmark")
    m.seasonLabel = m.top.findNode("seasonLabel")
end sub

sub onContentChanged()
    content = m.top.itemContent
    if content = invalid then return

    ' Set season label
    if content.seasonNumber <> invalid
        m.seasonLabel.text = "Season " + content.seasonNumber.toStr()
    end if

    ' Set checkmark visibility
    if content.checked <> invalid
        m.checkmark.visible = content.checked
    end if
end sub
