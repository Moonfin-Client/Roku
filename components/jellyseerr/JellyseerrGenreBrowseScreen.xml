<?xml version="1.0" encoding="utf-8"?>
<component name="JellyseerrGenreBrowseScreen" extends="JFScreen">

    <children>
        <!-- Background color -->
        <Rectangle width="1920" height="1080" color="#111827" />

        <!-- Backdrop image as background -->
        <Poster id="backdrop"
            loadDisplayMode="scaleToZoom"
            width="1920"
            height="1080"
            opacity="0.25" />

        <!-- Color tint/scrim overlay for readability -->
        <Rectangle id="backdropTint" width="1920" height="1080" color="#F2000000" opacity="1.0" />

        <!-- Category name centered below navbar -->
        <Label id="genreNameLabel"
            text=""
            width="1920"
            translation="[0, 125]"
            font="font:LargeBoldSystemFont"
            color="#FFFFFF"
            horizAlign="center" />

        <!-- Header row with title and buttons -->
        <LayoutGroup id="headerRow" translation="[100, 170]" layoutDirection="horiz">
            <!-- Focused item title on left -->
            <Label id="itemTitle"
                text=""
                font="font:LargeBoldSystemFont"
                color="#FFFFFF"
                width="1320" />
        </LayoutGroup>

        <!-- Sort/Filter buttons on the right -->
        <LayoutGroup id="filterButtonGroup" translation="[1500, 165]" layoutDirection="horiz" itemSpacings="[15]">
            <StandardButton id="sortButton" text="Sort" width="120" height="50" />
            <StandardButton id="filterButton" text="Filter" width="120" height="50" />
        </LayoutGroup>

        <!-- Item info section -->
        <LayoutGroup id="infoGroup" translation="[100, 210]" layoutDirection="vert" itemSpacings="[8]">
            <!-- Metadata row -->
            <LayoutGroup layoutDirection="horiz" itemSpacings="[20]">
                <Label id="metaYear" font="font:SmallSystemFont" color="#9CA3AF" />
                <Label id="metaType" font="font:SmallSystemFont" color="#9CA3AF" />
                <LayoutGroup layoutDirection="horiz" itemSpacings="[5]">
                    <Poster id="starIcon" uri="pkg:/images/sharp_star_white_18dp.png" height="20" width="20" blendColor="#FFD700" visible="false" />
                    <Label id="metaRating" font="font:SmallSystemFont" color="#FFD700" />
                </LayoutGroup>
            </LayoutGroup>
            <!-- Description spanning full width, 3 lines -->
            <Label id="metaOverview"
                font="font:SmallSystemFont"
                color="#D1D5DB"
                width="1720"
                maxLines="3"
                wrap="true" />
        </LayoutGroup>

        <!-- MarkupGrid for media items - poster only height for focus rectangle -->
        <MarkupGrid id="mediaGrid"
            translation="[100, 395]"
            itemComponentName="JellyseerrPoster"
            itemSize="[180, 270]"
            itemSpacing="[20, 65]"
            numColumns="8"
            numRows="2"
            vertFocusAnimationStyle="fixed"
            drawFocusFeedback="true"
            visible="true" />

        <Label id="loadingLabel"
            text="Loading..."
            font="font:LargeSystemFont"
            translation="[960, 540]"
            horizAlign="center"
            vertAlign="center"
            visible="false" />

        <Label id="errorLabel"
            text=""
            font="font:MediumSystemFont"
            translation="[100, 400]"
            width="1720"
            wrap="true"
            color="#EF4444"
            visible="false" />

        <Label id="noResultsLabel"
            text="No results found"
            font="font:MediumSystemFont"
            translation="[960, 540]"
            horizAlign="center"
            vertAlign="center"
            color="#9CA3AF"
            visible="false" />
    </children>

    <interface>
        <field id="genreId" type="integer" value="0" />
        <field id="genreName" type="string" value="" />
        <field id="mediaType" type="string" value="movie" />
        <field id="browseType" type="string" value="genre" />
    </interface>

</component>