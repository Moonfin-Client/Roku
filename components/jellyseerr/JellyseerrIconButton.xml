<?xml version="1.0" encoding="utf-8"?>
<component name="JellyseerrIconButton" extends="Group">
    <interface>
        <field id="iconUri" type="string" onChange="updateIcon" />
        <field id="text" type="string" onChange="updateText" />
        <field id="isEnabled" type="boolean" value="true" onChange="updateState" />
        <field id="buttonSelected" type="boolean" alwaysNotify="true" />
    </interface>

    <children>
        <!-- Icon -->
        <Poster id="icon"
            width="120"
            height="120"
            translation="[0, 0]"
            loadDisplayMode="scaleToFit" />

        <!-- Text label under icon -->
        <Label id="label"
            width="120"
            height="30"
            translation="[0, 130]"
            font="font:SmallSystemFont"
            color="#FFFFFF"
            horizAlign="center"
            vertAlign="top" />

        <!-- Focus border -->
        <Rectangle id="focusBorder"
            translation="[-2, -2]"
            width="124"
            height="124"
            color="#FFFFFF"
            opacity="0.0" />
    </children>
</component>