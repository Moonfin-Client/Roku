<?xml version="1.0" encoding="utf-8"?>
<component name="JellyseerrSeasonDialog" extends="Group" focusable="true">
    <interface>
        <field id="showName" type="string" />
        <field id="numberOfSeasons" type="integer" />
        <field id="is4k" type="boolean" />
        <field id="selectedSeasons" type="array" />
        <field id="wasCancelled" type="boolean" value="false" />
    </interface>

    <children>
        <!-- Background Overlay with slight blur effect -->
        <Rectangle
            id="background"
            color="0x00000099"
            width="1920"
            height="1080" />

        <!-- Dialog Container with rounded corners effect -->
        <Rectangle
            id="dialogBackground"
            color="0x1F2937"
            width="1100"
            height="800"
            translation="[410, 140]">
            <children>
                <!-- Top accent bar -->
                <Rectangle
                    id="accentBar"
                    color="0x6366F1"
                    width="1100"
                    height="6"
                    translation="[0, 0]" />

                <!-- Title -->
                <Label
                    id="title"
                    text="Select Seasons to Request"
                    color="0xFFFFFF"
                    font="font:LargeBoldSystemFont"
                    width="1040"
                    height="70"
                    horizAlign="center"
                    vertAlign="center"
                    translation="[30, 35]" />

                <!-- Subtitle (Show name + quality) with icon -->
                <Label
                    id="subtitle"
                    text=""
                    color="0xD1D5DB"
                    font="font:MediumSystemFont"
                    width="1040"
                    height="45"
                    horizAlign="center"
                    translation="[30, 100]" />

                <!-- Help text -->
                <Label
                    id="helpText"
                    text="Press OK to select/deselect • Use ↑↓ to navigate"
                    color="0x9CA3AF"
                    font="font:SmallSystemFont"
                    width="1040"
                    height="30"
                    horizAlign="center"
                    translation="[30, 145]" />

                <!-- List container with background -->
                <Rectangle
                    id="listBackground"
                    color="0x111827"
                    width="1020"
                    height="520"
                    translation="[40, 190]">
                    <children>
                        <!-- Season List with custom styling -->
                        <LabelList
                            id="seasonList"
                            translation="[20, 10]"
                            itemSize="[980, 65]"
                            numRows="6"
                            vertFocusAnimationStyle="floatingFocus"
                            drawFocusFeedback="true"
                            focusBitmapUri=""
                            focusFootprintBitmapUri=""
                            itemSpacing="[0, 5]" />

                        <!-- Buttons directly inside listBackground at bottom -->
                        <Group id="okButton" translation="[330, 435]" focusable="true">
                            <Poster
                                id="okButtonBg"
                                uri="pkg:/images/white.9.png"
                                width="220"
                                height="75"
                                blendColor="0x4B5563FF" />
                            <Label
                                id="okButtonText"
                                text="Confirm"
                                color="0xFFFFFFFF"
                                font="font:MediumBoldSystemFont"
                                width="220"
                                height="75"
                                horizAlign="center"
                                vertAlign="center" />
                        </Group>

                        <Group id="cancelButton" translation="[590, 435]" focusable="true">
                            <Poster
                                id="cancelButtonBg"
                                uri="pkg:/images/white.9.png"
                                width="220"
                                height="75"
                                blendColor="0x4B5563FF" />
                            <Label
                                id="cancelButtonText"
                                text="Cancel"
                                color="0xFFFFFFFF"
                                font="font:MediumBoldSystemFont"
                                width="220"
                                height="75"
                                horizAlign="center"
                                vertAlign="center" />
                        </Group>
                    </children>
                </Rectangle>
            </children>
        </Rectangle>
    </children>

</component>