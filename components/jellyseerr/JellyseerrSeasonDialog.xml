<?xml version="1.0" encoding="utf-8"?>
<component name="JellyseerrSeasonDialog" extends="Group" focusable="true">
    <interface>
        <field id="showName" type="string" />
        <field id="numberOfSeasons" type="integer" />
        <field id="is4k" type="boolean" />
        <field id="selectedSeasons" type="array" />
        <field id="wasCancelled" type="boolean" value="false" />
    </interface>

    <children>
        <!-- Background Overlay -->
        <Rectangle
            id="background"
            color="0x000000CC"
            width="1920"
            height="1080" />

        <!-- Dialog Container -->
        <Rectangle
            id="dialogBackground"
            color="0x262626"
            width="1000"
            height="700"
            translation="[460, 190]">
            <children>
                <!-- Title -->
                <Label
                    id="title"
                    text="Select Seasons"
                    color="0xFFFFFF"
                    font="font:LargeBoldSystemFont"
                    width="950"
                    height="60"
                    horizAlign="center"
                    translation="[25, 25]" />

                <!-- Subtitle (Show name + quality) -->
                <Label
                    id="subtitle"
                    text=""
                    color="0x9CA3AF"
                    font="font:MediumSystemFont"
                    width="950"
                    height="40"
                    horizAlign="center"
                    translation="[25, 75]" />

                <!-- Season List (using LabelList for better control) -->
                <LabelList
                    id="seasonList"
                    translation="[50, 130]"
                    itemSize="[900, 60]"
                    numRows="6"
                    vertFocusAnimationStyle="floatingFocus"
                    drawFocusFeedback="true"
                    focusBitmapUri=""
                    focusFootprintBitmapUri="" />

                <!-- Button Group -->
                <LayoutGroup
                    id="buttonGroup"
                    layoutDirection="horiz"
                    horizAlignment="center"
                    itemSpacings="[40]"
                    translation="[250, 580]">

                    <StandardButton
                        id="okButton"
                        text="OK"
                        height="70"
                        width="200" />

                    <StandardButton
                        id="cancelButton"
                        text="Cancel"
                        height="70"
                        width="200" />
                </LayoutGroup>
            </children>
        </Rectangle>
    </children>

</component>