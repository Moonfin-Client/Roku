<?xml version="1.0" encoding="utf-8"?>
<component name="JellyseerrCastCard" extends="Group">
    <interface>
        <field id="itemContent" type="node" onChange="itemContentChanged" />
        <field id="itemHasFocus" type="boolean" onChange="focusChanged" alwaysNotify="true" />
        <field id="drawFocusFeedback" type="boolean" value="false" />
    </interface>

    <children>
        <Group id="scaleGroup">
            <!-- Background for visibility -->
            <Rectangle
                width="250"
                height="353"
                translation="[0, 23]"
                color="#111827"
                opacity="1.0" />

            <!-- Circular cast photo with mask -->
            <MaskGroup id="photoCircle" maskUri="pkg:/images/icons/circle64.png" maskSize="[250, 250]" translation="[0, 23]">
                <Poster id="profileImage"
                    width="250"
                    height="250"
                    loadDisplayMode="scaleToZoom"
                    failedBitmapUri="pkg:/images/media_type_icons/person.png" />
            </MaskGroup>

            <!-- Actor name -->
            <ScrollingLabel id="actorName"
                translation="[0, 281]"
                height="32"
                horizAlign="left"
                vertAlign="top"
                font="font:SmallSystemFont"
                color="#FFFFFF"
                maxWidth="250"
                repeatCount="0" />

            <!-- Character name -->
            <ScrollingLabel id="characterName"
                translation="[0, 313]"
                height="32"
                horizAlign="left"
                vertAlign="top"
                font="font:SmallSystemFont"
                color="#CCCCCC"
                maxWidth="250"
                repeatCount="0" />
        </Group>
    </children>
</component>