<?xml version="1.0" encoding="utf-8"?>
<component name="JellyseerrSettingsScreen" extends="JFScreen">
    <script type="text/brightscript" uri="pkg:/source/utils/JellyseerrUtils.bs" />

    <children>
        <Poster id="backgroundPoster" uri="pkg:/images/Overhang_Background_SD_2.jpg" width="1920" height="1080" opacity="0.3" />

        <Label id="titleLabel"
            text="Jellyseerr Settings"
            font="font:LargeSystemFont"
            translation="[60, 100]" />

        <Group id="settingsGroup" translation="[100, 180]">
            <Label id="label1" text="Server URL:" font="font:MediumSystemFont" translation="[0, 0]" width="300" />
            <StandardButton id="serverUrlButton" text="Not Set" translation="[320, 0]" width="500" />

            <Label id="authLabel" text="Authentication:" font="font:MediumSystemFont" translation="[0, 60]" width="300" />
            <StandardButton id="jellyffinSsoButton" text="Connect with Jellyfin" translation="[320, 60]" width="500" />

            <StandardButton id="localLoginButton" text="Local Account Login" translation="[320, 120]" width="500" />

            <Label id="label2" text="API Key:" font="font:MediumSystemFont" translation="[0, 180]" width="300" />
            <StandardButton id="apiKeyButton" text="Not Set" translation="[320, 180]" width="500" />

            <Label id="label3" text="Block NSFW Content:" font="font:MediumSystemFont" translation="[0, 240]" width="300" />
            <StandardButton id="nsfwToggleButton" text="Enabled" translation="[320, 240]" width="400" />

            <StandardButton id="testConnectionButton" text="Test Connection" translation="[0, 300]" width="400" />
            <StandardButton id="enableDisableButton" text="Enable Jellyseerr" translation="[450, 300]" width="400" />

            <StandardButton id="backButton" text="Back" translation="[0, 360]" width="400" />
        </Group>

        <Label id="statusLabel"
            text=""
            font="font:MediumSystemFont"
            translation="[100, 500]"
            width="1700"
            wrap="true"
            visible="false" />

        <Keyboard id="keyboard"
            translation="[100, 150]"
            width="1700" />
    </children>
</component>