<?xml version="1.0" encoding="utf-8"?>
<component name="JellyseerrSearchScreen" extends="JFScreen">

    <children>
        <Poster id="backgroundPoster" uri="pkg:/images/Overhang_Background_SD_2.jpg" width="1920" height="1080" opacity="0.3" />

        <Label id="titleLabel"
            text="Search"
            font="font:LargeSystemFont"
            translation="[60, 100]" />

        <Keyboard id="keyboard"
            translation="[100, 150]"
            width="1700" />

        <RowList id="resultsRowList"
            translation="[60, 350]"
            width="1800"
            height="650"
            numRows="3"
            rowHeights="[250]"
            showRowLabel="[false]" />

        <Label id="noResultsLabel"
            text="No results found"
            font="font:MediumSystemFont"
            translation="[960, 540]"
            horizAlign="center"
            vertAlign="center"
            visible="false" />

        <Label id="loadingLabel"
            text="Searching..."
            font="font:MediumSystemFont"
            translation="[960, 540]"
            horizAlign="center"
            vertAlign="center"
            visible="false" />
    </children>
</component>