<?xml version="1.0" encoding="utf-8"?>
<!-- 
  Refactored from Rectangle to Group with Poster background for better visual consistency.
  Uses circular PNG for smooth edges instead of cornerRadii (which causes warnings on some firmware).
-->
<component name="PlayedCheckmark" extends="Group">
  <children>
    <Poster
      id="background"
      width="40"
      height="40"
      uri="pkg:/images/icons/circle.png"
      blendColor="#00A4DCFF"
      visible="false" />

    <Label
      id="checkmark"
      width="40"
      height="40"
      font="font:SmallBoldSystemFont"
      horizAlign="center"
      vertAlign="center"
      translation="[0, 2]"
      text="âœ“"
      visible="false" />

    <Label
      id="unplayedNumber"
      width="40"
      height="40"
      font="font:SmallSystemFont"
      horizAlign="center"
      vertAlign="center"
      translation="[0, 2]"
      visible="false" />
  </children>
  <interface>
    <field id="width" type="float" value="40" onChange="onSizeChange" />
    <field id="height" type="float" value="40" onChange="onSizeChange" />
    <field id="data" type="assocarray" onChange="onDataChange" />
  </interface>
</component>