<?xml version="1.0" encoding="utf-8"?>
<component name="PlaylistDetails" extends="JFScreen">
    <children>
        <!-- Full-screen backdrop -->
        <Rectangle id="backdropBlack" width="1920" height="1080" color="#000000" visible="true" />
        <Poster id="backdrop" width="1920" height="1080" loadDisplayMode="scaleToFill"
            opacity="0.3" visible="true" />
        <Rectangle id="backdropTint" width="1920" height="1080"
            color="#F2000000" opacity="1.0" visible="true" />

        <!-- Scrollable content wrapper -->
        <Group id="scrollableContent" translation="[0, 0]">

            <!-- Header area: cover art + info -->
            <Group id="headerArea" translation="[96, 160]">
                <!-- Playlist cover (square) -->
                <Poster id="playlistCover" width="280" height="280"
                    loadDisplayMode="scaleToFit" />

                <!-- Playlist info (to the right of cover) -->
                <Group id="playlistInfo" translation="[312, 0]">
                    <!-- Playlist label (dim, small) -->
                    <Text id="playlistLabel" font="font:SmallSystemFont"
                        color="#999999" width="1200" maxLines="1"
                        text="Playlist" />

                    <!-- Playlist title (large, bold) -->
                    <Text id="playlistTitle" font="font:LargeBoldSystemFont"
                        color="#FFFFFF" width="1200" maxLines="1"
                        translation="[0, 30]" />

                    <!-- Item count + runtime (dim) -->
                    <Text id="playlistMeta" font="font:SmallestSystemFont"
                        color="#999999" width="1200"
                        translation="[0, 74]" />

                    <!-- Overview (dim, up to 4 lines) -->
                    <Text id="playlistOverview" font="font:SmallestSystemFont"
                        color="#AAAAAA" width="1200" maxLines="4" wrap="true"
                        translation="[0, 100]" lineSpacing="4"
                        ellipsizeOnBoundary="true" />
                </Group>
            </Group>

            <!-- Button row (centered) -->
            <Group id="buttonRowArea" translation="[0, 470]">
                <LayoutGroup id="buttonRow" layoutDirection="horiz"
                    horizAlignment="center" itemSpacings="[50]"
                    translation="[960, 0]" />
            </Group>

            <!-- Item list header -->
            <Group id="itemListHeader" translation="[96, 610]">
                <Text id="itemsLabel" font="font:SmallBoldSystemFont"
                    text="Items" color="#AAAAAA" />
                <Text id="itemCount" font="font:SmallBoldSystemFont"
                    color="#666666" translation="[1560, 0]"
                    horizAlign="right" width="72" />
            </Group>

            <!-- Item list (MarkupGrid with 1 column) -->
            <MarkupGrid id="itemList"
                translation="[96, 650]"
                numColumns="1"
                numRows="3"
                itemComponentName="PlaylistItemRow"
                itemSize="[1728, 120]"
                itemSpacing="[0, 10]"
                drawFocusFeedback="true"
                focusBitmapUri="pkg:/images/hd_focus.9.png"
                vertFocusAnimationStyle="floatingFocus" />
        </Group>
    </children>
    <interface>
        <field id="pageContent" type="node" onChange="onPageContentChanged" />
        <field id="listData" type="node" onChange="onListDataChanged" />
        <field id="selectedItem" type="node" alwaysNotify="true" />
        <field id="quickPlayNode" type="node" />
        <field id="playAll" type="bool" alwaysNotify="true" />
        <field id="shufflePlay" type="bool" alwaysNotify="true" />
        <field id="playlistItemSelected" type="integer" alwaysNotify="true" />
        <field id="refreshPlaylistData" type="bool" alwaysNotify="true" />
        <function name="getFocusedItem" />
    </interface>
</component>