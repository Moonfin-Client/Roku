<?xml version="1.0" encoding="utf-8"?>
<component name="PlaylistItemRow" extends="Group">
    <children>
        <!-- Subtle background card -->
        <Poster id="rowBackground" uri="pkg:/images/hd_focus_filled.9.png"
            loadDisplayMode="scaleToFit" width="1728" height="110"
            blendColor="#FFFFFF" opacity="0.04" />

        <!-- Focus background glow animation -->
        <Animation id="focusInAnimation" duration="0.2" repeat="false" easeFunction="inOutQuad">
            <FloatFieldInterpolator id="bgFocusIn"
                key="[0.0, 1.0]" keyValue="[0.04, 0.10]"
                fieldToInterp="rowBackground.opacity" />
        </Animation>
        <Animation id="focusOutAnimation" duration="0.2" repeat="false" easeFunction="inOutQuad">
            <FloatFieldInterpolator id="bgFocusOut"
                key="[0.0, 1.0]" keyValue="[0.10, 0.04]"
                fieldToInterp="rowBackground.opacity" />
        </Animation>

        <!-- Media type icon -->
        <Poster id="mediaTypeIcon" translation="[20, 39]"
            width="32" height="32" />

        <!-- Text content area -->
        <Group id="textContent" translation="[68, 16]">
            <!-- Title (bold) -->
            <Text id="itemTitle" font="font:SmallBoldSystemFont"
                color="#FFFFFF" width="1400" maxLines="1" />

            <!-- Subtitle (artist, series info, etc.) -->
            <Text id="itemSubtitle" font="font:SmallestSystemFont"
                color="#999999" width="1400" maxLines="1"
                translation="[0, 32]" />

            <!-- Additional info line (season/episode, year, etc.) -->
            <Text id="itemInfo" font="font:SmallestSystemFont"
                color="#666666" width="1400" maxLines="1"
                translation="[0, 56]" />
        </Group>

        <!-- Played checkmark -->
        <PlayedCheckmark id="playedIndicator" translation="[1540, 30]"
            width="50" height="50" scale="[.75, .75]" scaleRotateCenter="[0, 0]" />

        <!-- Runtime (right-aligned) -->
        <Text id="itemRuntime" font="font:SmallestSystemFont"
            color="#999999" translation="[1600, 44]"
            horizAlign="right" width="116" />
    </children>
    <interface>
        <field id="itemContent" type="node" onChange="itemContentChanged" />
        <field id="itemHasFocus" type="boolean" onChange="focusChanged" />
        <field id="width" type="float" />
    </interface>
</component>