<?xml version="1.0" encoding="utf-8"?>
<component name="AlbumDetails" extends="JFScreen">
    <children>
        <!-- Full-screen backdrop -->
        <Rectangle id="backdropBlack" width="1920" height="1080" color="#000000" visible="true" />
        <Poster id="backdrop" width="1920" height="1080" loadDisplayMode="scaleToFill"
            opacity="0.3" visible="true" />
        <Rectangle id="backdropTint" width="1920" height="1080"
            color="#F2000000" opacity="1.0" visible="true" />

        <!-- Scrollable content wrapper -->
        <Group id="scrollableContent" translation="[0, 0]">

            <!-- Header area: cover art + info -->
            <Group id="headerArea" translation="[96, 160]">
                <!-- Album cover (square) -->
                <Poster id="albumCover" width="280" height="280"
                    loadDisplayMode="scaleToFit" />

                <!-- Album info (to the right of cover) -->
                <Group id="albumInfo" translation="[312, 0]">
                    <!-- Album label -->
                    <Text id="albumLabel" font="font:SmallSystemFont"
                        color="#999999" width="1200" maxLines="1"
                        text="Album" />

                    <!-- Album title -->
                    <Text id="albumTitle" font="font:LargeBoldSystemFont"
                        color="#FFFFFF" width="1200" maxLines="1"
                        translation="[0, 30]" />

                    <!-- Artist name -->
                    <Text id="artistName" font="font:SmallSystemFont"
                        color="#AAAAAA" width="1200" maxLines="1"
                        translation="[0, 74]" />

                    <!-- Meta info (song count, runtime, year) -->
                    <Text id="albumMeta" font="font:SmallestSystemFont"
                        color="#999999" width="1200"
                        translation="[0, 100]" />

                    <!-- Overview -->
                    <Text id="albumOverview" font="font:SmallestSystemFont"
                        color="#AAAAAA" width="1200" maxLines="3" wrap="true"
                        translation="[0, 126]" lineSpacing="4"
                        ellipsizeOnBoundary="true" />
                </Group>
            </Group>

            <!-- Button row -->
            <Group id="buttonRowArea" translation="[0, 470]">
                <LayoutGroup id="buttonRow" layoutDirection="horiz"
                    horizAlignment="center" itemSpacings="[50]"
                    translation="[960, 0]" />
            </Group>

            <!-- Track list header -->
            <Group id="trackListHeader" translation="[96, 610]">
                <Text id="tracksLabel" font="font:SmallBoldSystemFont"
                    text="Tracks" color="#AAAAAA" />
                <Text id="trackCount" font="font:SmallBoldSystemFont"
                    color="#666666" translation="[1560, 0]"
                    horizAlign="right" width="72" />
            </Group>

            <!-- Track list (MarkupGrid with 1 column like PlaylistDetails) -->
            <MarkupGrid id="trackList"
                translation="[96, 650]"
                numColumns="1"
                numRows="6"
                itemComponentName="PlaylistItemRow"
                itemSize="[1728, 120]"
                itemSpacing="[0, 10]"
                drawFocusFeedback="true"
                focusBitmapUri="pkg:/images/hd_focus.9.png"
                vertFocusAnimationStyle="floatingFocus" />
        </Group>
    </children>
    <interface>
        <field id="pageContent" type="node" onChange="onPageContentChanged" />
        <field id="albumData" type="node" onChange="onAlbumDataChanged" />
        <field id="selectedItem" type="node" alwaysNotify="true" />
        <field id="quickPlayNode" type="node" alwaysNotify="true" />
        <field id="playSong" type="integer" alwaysNotify="true" />
        <field id="playAlbumSelected" type="bool" alwaysNotify="true" />
        <field id="shuffleAlbumSelected" type="bool" alwaysNotify="true" />
        <field id="instantMixSelected" type="bool" alwaysNotify="true" />
    </interface>
</component>