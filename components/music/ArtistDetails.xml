<?xml version="1.0" encoding="utf-8"?>
<component name="ArtistDetails" extends="JFScreen">
    <children>
        <!-- Backdrop crossfade layers -->
        <Rectangle id="backdropBlack" width="1920" height="1080" color="#000000" />
        <Poster id="backdropPrev" loadDisplayMode="scaleToFill" width="1920" height="1080" opacity="0.0" />
        <Poster id="backdrop" loadDisplayMode="scaleToFill" width="1920" height="1080" opacity="0.0" />
        <Rectangle id="backdropTint" width="1920" height="1080" color="#F2000000" opacity="1.0" />

        <!-- Scrollable content wrapper -->
        <Group id="scrollableContent" translation="[0, 0]">

            <!-- Artist info section -->
            <Group id="infoSection" translation="[96, 140]">
                <!-- Artist image (square) -->
                <Poster id="artistImage" width="280" height="280"
                    loadDisplayMode="scaleToFit" />

                <!-- Artist info (to the right of image) -->
                <Group id="artistInfo" translation="[312, 0]">
                    <!-- "Artist" label -->
                    <Text id="artistLabel" font="font:SmallSystemFont"
                        color="#999999" width="1200" maxLines="1"
                        text="Artist" />

                    <!-- Artist name -->
                    <Text id="artistName" font="font:LargeBoldSystemFont"
                        color="#FFFFFF" width="1200" maxLines="1"
                        translation="[0, 30]" />

                    <!-- Album count + genre info -->
                    <Text id="artistMeta" font="font:SmallestSystemFont"
                        color="#999999" width="1200"
                        translation="[0, 74]" />

                    <!-- Biography / overview -->
                    <Text id="artistOverview" font="font:SmallestSystemFont"
                        color="#AAAAAA" width="1200" maxLines="4" wrap="true"
                        translation="[0, 100]" lineSpacing="4"
                        ellipsizeOnBoundary="true" />
                </Group>
            </Group>

            <!-- Button row -->
            <Group id="buttonRowArea" translation="[0, 450]">
                <LayoutGroup id="buttonRow" layoutDirection="horiz"
                    horizAlignment="center" itemSpacings="[50]"
                    translation="[960, 0]" />
            </Group>

            <!-- Albums section header -->
            <Group id="albumsHeader" translation="[96, 590]">
                <Text id="albumsLabel" font="font:MediumBoldSystemFont"
                    text="Albums" color="#FFFFFF" />
                <Text id="albumCount" font="font:MediumBoldSystemFont"
                    color="#666666" translation="[1560, 0]"
                    horizAlign="right" width="72" />
            </Group>

            <!-- Albums grid (square items) -->
            <MarkupGrid id="albumGrid"
                translation="[96, 640]"
                numColumns="5"
                numRows="2"
                itemComponentName="GridItemSmall"
                itemSize="[310, 350]"
                itemSpacing="[30, 30]"
                drawFocusFeedback="true"
                focusBitmapUri="pkg:/images/hd_focus.9.png"
                vertFocusAnimationStyle="floatingFocus" />
        </Group>

        <!-- Backdrop fade-in animation -->
        <Animation id="backdropFadeIn" duration="0.5" repeat="false" easeFunction="inOutQuad">
            <FloatFieldInterpolator id="backdropFadeInInterp"
                key="[0.0, 1.0]"
                keyValue="[0.0, 0.4]"
                fieldToInterp="backdrop.opacity" />
        </Animation>

        <!-- Backdrop fade-out (previous layer) animation -->
        <Animation id="backdropPrevFadeOut" duration="0.5" repeat="false" easeFunction="inOutQuad">
            <FloatFieldInterpolator id="backdropPrevFadeOutInterp"
                key="[0.0, 1.0]"
                keyValue="[0.4, 0.0]"
                fieldToInterp="backdropPrev.opacity" />
        </Animation>
    </children>
    <interface>
        <field id="pageContent" type="node" onChange="onPageContentChanged" />
        <field id="albumData" type="node" onChange="onAlbumDataChanged" />
        <field id="appearsOnData" type="node" />
        <field id="artistOverviewText" type="string" />
        <field id="selectedAlbum" type="node" alwaysNotify="true" />
        <field id="playArtistSelected" type="bool" alwaysNotify="true" />
        <field id="instantMixSelected" type="bool" alwaysNotify="true" />
        <field id="quickPlayNode" type="node" alwaysNotify="true" />
    </interface>
</component>