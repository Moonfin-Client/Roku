<?xml version="1.0" encoding="utf-8"?>
<component name="ExtrasItem" extends="JFGroup">
  <children>
    <!-- Circular cast photo with border (for people) -->
    <MaskGroup id="photoCircle" visible="false" maskUri="pkg:/images/icons/circle64.png" maskSize="[250, 250]">
      <Poster
        id="posterImg"
        width="250"
        height="250"
        loadDisplayMode="scaleToZoom"
        failedBitmapUri="pkg:/images/baseline_person_white_48dp.png" />
    </MaskGroup>

    <!-- Rectangular poster for movies/shows (More Like This) -->
    <Poster
      id="posterImgRect"
      visible="false"
      loadDisplayMode="scaleToZoom">
      <PlayedCheckmark id="playedIndicator" translation="[174, 0]" />
    </Poster>

    <!-- Text labels below poster -->
    <ScrollingLabel
      id="pLabel"
      horizAlign="left"
      vertAlign="top"
      height="40"
      translation="[0, 258]"
      font="font:SmallSystemFont"
      color="#FFFFFF"
      maxWidth="250"
      repeatCount="0" />
    <Text
      id="SubTitle"
      horizAlign="left"
      vertAlign="top"
      width="250"
      height="32"
      translation="[0, 298]"
      font="font:SmallSystemFont"
      color="#CCCCCC"
      wrap="true"
      maxLines="1" />
  </children>
  <interface>
    <field id="itemContent" type="node" onChange="showContent" />
    <field id="itemHasFocus" type="boolean" onChange="focusChanged" />
  </interface>
</component>