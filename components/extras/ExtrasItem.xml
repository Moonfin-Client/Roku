<?xml version="1.0" encoding="utf-8"?>
<component name="ExtrasItem" extends="JFGroup">
  <children>
    <Group id="scaleGroup" scale="[0.9, 0.9]">
      <!-- Circular cast photo with border (for people) -->
      <MaskGroup id="photoCircle" visible="false" maskUri="pkg:/images/icons/circle64.png" maskSize="[250, 250]" translation="[0, 23]">
        <Poster
          id="posterImg"
          width="250"
          height="250"
          loadDisplayMode="scaleToZoom"
          failedBitmapUri="pkg:/images/baseline_person_white_48dp.png" />
      </MaskGroup>

      <!-- Rectangular poster for movies/shows (More Like This) -->
      <Poster
        id="posterImgRect"
        visible="false"
        loadDisplayMode="scaleToZoom"
        translation="[0, 23]">
        <PlayedCheckmark id="playedIndicator" translation="[174, 0]" />
      </Poster>

      <!-- Text labels below poster -->
      <ScrollingLabel
        id="pLabel"
        horizAlign="left"
        vertAlign="top"
        height="40"
        translation="[0, 281]"
        font="font:SmallSystemFont"
        color="#FFFFFF"
        maxWidth="250"
        repeatCount="0" />
      <Text
        id="SubTitle"
        horizAlign="left"
        vertAlign="top"
        width="250"
        height="32"
        translation="[0, 321]"
        font="font:SmallSystemFont"
        color="#CCCCCC"
        wrap="true"
        maxLines="1" />
    </Group>

    <Animation id="focusAnimation" duration="0.1" repeat="false" easeFunction="outCubic">
      <Vector2DFieldInterpolator id="focusScaleInterp" key="[0.0, 1.0]" keyValue="[[0.9, 0.9], [1.1, 1.1]]" fieldToInterp="scaleGroup.scale" />
    </Animation>

    <Animation id="unfocusAnimation" duration="0.1" repeat="false" easeFunction="inCubic">
      <Vector2DFieldInterpolator id="unfocusScaleInterp" key="[0.0, 1.0]" keyValue="[[1.1, 1.1], [0.9, 0.9]]" fieldToInterp="scaleGroup.scale" />
    </Animation>
  </children>
  <interface>
    <field id="itemContent" type="node" onChange="showContent" />
    <field id="itemHasFocus" type="boolean" onChange="focusChanged" />
  </interface>
</component>