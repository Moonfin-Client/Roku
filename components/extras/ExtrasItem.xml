<?xml version="1.0" encoding="utf-8"?>
<component name="ExtrasItem" extends="JFGroup">
  <children>
    <Group id="scaleGroup">
      <!-- Circular cast photo with border (for people) -->
      <MaskGroup id="photoCircle" visible="false" maskUri="pkg:/images/icons/circle64.png" maskSize="[250, 250]" translation="[0, 23]">
        <Poster
          id="posterImg"
          width="250"
          height="250"
          loadDisplayMode="scaleToZoom"
          failedBitmapUri="pkg:/images/baseline_person_white_48dp.png" />
      </MaskGroup>

      <!-- White circular focus border overlay -->
      <Poster id="circleFocusBorder"
        width="250"
        height="250"
        translation="[0, 23]"
        uri="pkg:/images/icons/circle64-focused.png"
        visible="false" />

      <!-- Rectangular poster for movies/shows (More Like This) -->
      <Poster
        id="posterImgRect"
        visible="false"
        loadDisplayMode="scaleToZoom"
        translation="[0, 23]">
        <PlayedCheckmark id="playedIndicator" translation="[174, 0]" />
      </Poster>

      <!-- Rectangular focus border overlay -->
      <Poster id="rectFocusBorder"
        width="234"
        height="351"
        translation="[0, 23]"
        uri="pkg:/images/hd_focus.9.png"
        loadDisplayMode="scaleToFit"
        visible="false" />

      <!-- Text labels below poster -->
      <ScrollingLabel
        id="pLabel"
        horizAlign="left"
        vertAlign="top"
        height="40"
        translation="[0, 281]"
        font="font:SmallSystemFont"
        color="#FFFFFF"
        maxWidth="250"
        repeatCount="0" />
      <Text
        id="SubTitle"
        horizAlign="left"
        vertAlign="top"
        width="250"
        height="32"
        translation="[0, 321]"
        font="font:SmallSystemFont"
        color="#CCCCCC"
        wrap="true"
        maxLines="1" />
    </Group>
  </children>
  <interface>
    <field id="itemContent" type="node" onChange="showContent" />
    <field id="itemHasFocus" type="boolean" onChange="focusChanged" />
    <field id="drawFocusFeedback" type="boolean" value="true" />
  </interface>
</component>