<?xml version="1.0" encoding="utf-8"?>
<component name="PersonDetails" extends="JFGroup">
  <interface>
    <field id="itemContent" type="node" onChange="loadPerson" />
    <field id="image" type="node" />
    <field id="selectedItem" type="node" alias="extrasGrid.selectedItem" alwaysNotify="true" />
  </interface>
  <children>
    <LayoutGroup id="container" layoutDirection="vert" translation="[100, 180]" itemSpacings="[10]">
      <!-- Top section: Info on left, Image on right -->
      <LayoutGroup id="topSection" layoutDirection="horiz" itemSpacings="[0]">
        <!-- Left side: Name, birth info, and biography -->
        <LayoutGroup id="leftInfo" layoutDirection="vert" itemSpacings="[12]">
          <!-- Person name -->
          <Text id="name"
            font="font:LargeBoldSystemFont"
            width="1150"
            color="#FFFFFF" />

          <!-- Birth info -->
          <Text id="birthInfo"
            font="font:MediumSystemFont"
            width="1150"
            color="#CCCCCC" />

          <!-- Biography -->
          <Text id="description"
            font="font:SmallSystemFont"
            width="1150"
            height="350"
            wrap="true"
            color="#E4E4E4" />
        </LayoutGroup>

        <!-- Right side: Person image (right aligned) -->
        <Poster id="personImage"
          width="350"
          height="525"
          translation="[70, 0]"
          loadDisplayMode="scaleToFit" />
      </LayoutGroup>

      <!-- Centered favorite button with icon above text - full width row -->
      <Rectangle
        width="1720"
        height="80"
        color="#00000000">
        <Group
          translation="[860, 10]">
          <LayoutGroup id="favoriteButtonGroup"
            focusable="true"
            layoutDirection="vert"
            horizAlignment="center"
            translation="[0, 0]"
            itemSpacings="[8]">
            <Poster id="favoriteIcon"
              uri="pkg:/images/icons/heart.png"
              width="48"
              height="48" />
            <Text id="favoriteText"
              text="Favorite"
              font="font:MediumSystemFont"
              color="#CCCCCC"
              horizAlign="center" />
          </LayoutGroup>
          <!-- Background poster for button (behind content) -->
          <Poster
            id="favoriteButtonBg"
            uri="pkg:/images/white.9.png"
            width="150"
            height="100"
            translation="[-75, -10]"
            opacity="0.1" />
        </Group>
      </Rectangle>
    </LayoutGroup>

    <!-- Credits grid -->
    <extrasSlider id="extrasSlider" visible="true" drawFocusFeedback="false" />
  </children>
</component>