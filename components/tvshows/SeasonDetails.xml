<?xml version="1.0" encoding="utf-8"?>
<component name="SeasonDetails" extends="JFScreen">
    <children>
        <!-- Full-screen backdrop -->
        <Rectangle id="backdropBlack" width="1920" height="1080" color="#000000" visible="true" />
        <Poster id="backdrop" width="1920" height="1080" loadDisplayMode="scaleToFill"
            opacity="0.3" visible="true" />
        <Rectangle id="backdropTint" width="1920" height="1080"
            color="#F2000000" opacity="1.0" visible="true" />

        <!-- Scrollable content wrapper -->
        <Group id="scrollableContent" translation="[0, 0]">

            <!-- Header area: poster + info -->
            <Group id="headerArea" translation="[96, 160]">
                <!-- Season poster -->
                <Poster id="seasonPoster" width="220" height="330"
                    loadDisplayMode="scaleToFit" />
                <PlayedCheckmark id="playedIndicator" translation="[160, 0]" />

                <!-- Season info (to the right of poster) -->
                <Group id="seasonInfo" translation="[252, 0]">
                    <!-- Series name (dim, small) -->
                    <Text id="seriesName" font="font:SmallSystemFont"
                        color="#999999" width="1200" maxLines="1" />

                    <!-- Season title (large, bold) -->
                    <Text id="seasonTitle" font="font:LargeBoldSystemFont"
                        color="#FFFFFF" width="1200" maxLines="1"
                        translation="[0, 30]" />

                    <!-- Episode count + year (dim) -->
                    <Text id="seasonMeta" font="font:SmallestSystemFont"
                        color="#999999" width="1200"
                        translation="[0, 74]" />
                </Group>
            </Group>

            <!-- Button row (centered) -->
            <Group id="buttonRowArea" translation="[0, 510]">
                <LayoutGroup id="buttonRow" layoutDirection="horiz"
                    horizAlignment="center" itemSpacings="[50]"
                    translation="[960, 0]" />
            </Group>

            <!-- Episode list header -->
            <Group id="episodeListHeader" translation="[96, 650]">
                <Text id="episodesLabel" font="font:SmallBoldSystemFont"
                    text="Episodes" color="#AAAAAA" />
                <Text id="episodeCount" font="font:SmallBoldSystemFont"
                    color="#666666" translation="[1560, 0]"
                    horizAlign="right" width="72" />
            </Group>

            <!-- Episode list (MarkupGrid with 1 column) -->
            <MarkupGrid id="episodeList"
                translation="[96, 690]"
                numColumns="1"
                numRows="4"
                itemComponentName="SeasonEpisodeRow"
                itemSize="[1728, 180]"
                itemSpacing="[0, 10]"
                drawFocusFeedback="true"
                focusBitmapUri="pkg:/images/hd_focus.9.png"
                vertFocusAnimationStyle="floatingFocus" />
        </Group>
    </children>
    <interface>
        <field id="seasonData" type="node" onChange="onSeasonDataChanged" />
        <field id="objects" type="assocarray" onChange="onEpisodeObjectsChanged" />
        <field id="episodeObjects" type="assocarray" />
        <field id="extrasObjects" type="assocarray" />
        <field id="displayResumeButton" type="bool" alwaysNotify="true" />
        <field id="selectedItem" type="node" alwaysNotify="true" />
        <field id="quickPlayNode" type="node" />
        <field id="playSeasonFromStart" type="bool" />
        <field id="shufflePlay" type="bool" />
        <field id="refreshSeasonDetailsData" type="bool" alwaysNotify="true" />
        <function name="updateSeason" />
        <function name="updateObjects" />
        <function name="getFocusedItem" />
    </interface>
</component>