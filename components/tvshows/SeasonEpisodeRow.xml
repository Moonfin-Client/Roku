<?xml version="1.0" encoding="utf-8"?>
<component name="SeasonEpisodeRow" extends="Group">
    <children>
        <!-- Subtle background card -->
        <Poster id="rowBackground" uri="pkg:/images/hd_focus_filled.9.png"
            loadDisplayMode="scaleToFit" width="1728" height="170"
            blendColor="#FFFFFF" opacity="0.04" />

        <!-- Focus background glow animation -->
        <Animation id="focusInAnimation" duration="0.2" repeat="false" easeFunction="inOutQuad">
            <FloatFieldInterpolator id="bgFocusIn"
                key="[0.0, 1.0]" keyValue="[0.04, 0.10]"
                fieldToInterp="rowBackground.opacity" />
        </Animation>
        <Animation id="focusOutAnimation" duration="0.2" repeat="false" easeFunction="inOutQuad">
            <FloatFieldInterpolator id="bgFocusOut"
                key="[0.0, 1.0]" keyValue="[0.10, 0.04]"
                fieldToInterp="rowBackground.opacity" />
        </Animation>

        <!-- Episode thumbnail -->
        <Poster id="episodeThumbnail" translation="[12, 10]"
            width="268" height="150" loadDisplayMode="scaleToZoom" />

        <!-- Progress bar overlay on thumbnail -->
        <Rectangle id="progressBackground" visible="false"
            color="0x00000098" width="268" height="6"
            translation="[12, 154]">
            <Rectangle id="progressBar" color="#00A4DCFF"
                width="0" height="6" visible="false" />
        </Rectangle>

        <!-- Played checkmark on thumbnail -->
        <PlayedCheckmark id="playedIndicator" translation="[220, 10]" />

        <!-- Text content area -->
        <Group id="textContent" translation="[296, 8]">
            <!-- Top line: "Episode N" + runtime right-aligned -->
            <Text id="episodeNumber" font="font:SmallestSystemFont"
                color="#999999" />
            <Text id="episodeRuntime" font="font:SmallestSystemFont"
                color="#999999" translation="[1332, 0]"
                horizAlign="right" width="100" />

            <!-- Episode title -->
            <Text id="episodeTitle" font="font:SmallBoldSystemFont"
                color="#FFFFFF" width="1400" maxLines="1"
                translation="[0, 22]" />

            <!-- Overview (max 3 lines) -->
            <Text id="episodeOverview" font="font:SmallestSystemFont"
                color="#888888" width="1400" maxLines="3" wrap="true"
                translation="[0, 52]" lineSpacing="4"
                ellipsizeOnBoundary="true" />
        </Group>
    </children>
    <interface>
        <field id="itemContent" type="node" onChange="itemContentChanged" />
        <field id="itemHasFocus" type="boolean" onChange="focusChanged" />
        <field id="width" type="float" />
    </interface>
</component>