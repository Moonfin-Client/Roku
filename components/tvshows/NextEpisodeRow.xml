<?xml version="1.0" encoding="utf-8"?>
<component name="NextEpisodeRow" extends="Group">
    <children>
        <LayoutGroup id="container" layoutDirection="vert" itemSpacings="[20]" translation="[100, 0]">
            <Text id="title" text="Next Episode" font="font:MediumBoldSystemFont" color="#FFFFFF" />
            <LayoutGroup id="episodeContainer" layoutDirection="horiz" itemSpacings="[40]">
                <Poster id="episodePoster" width="480" height="270" loadDisplayMode="scaleToFit">
                    <PlayedCheckmark id="playedIndicator" translation="[420, 0]" />
                </Poster>
                <LayoutGroup id="textGroup" layoutDirection="vert" itemSpacings="[12]">
                    <Text id="seasonEpisode" font="font:MediumSystemFont" color="#CCCCCC" />
                    <Text id="episodeName" font="font:MediumBoldSystemFont" color="#FFFFFF" wrap="true" maxLines="2" />
                </LayoutGroup>
            </LayoutGroup>
        </LayoutGroup>
    </children>
    <interface>
        <field id="nextEpisodeData" type="assocarray" onChange="onEpisodeDataChanged" />
    </interface>
</component>