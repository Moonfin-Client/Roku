<?xml version="1.0" encoding="utf-8"?>
<component name="FavoritesHomeItem" extends="Group">
    <children>
        <Rectangle id="backdrop" width="180" height="270" />
        <Poster id="itemIcon" width="80" height="80" translation="[50,95]" loadDisplayMode="scaleToFit" />
        <Poster id="itemPoster" width="180" height="270" loadDisplayMode="scaleToZoom">
            <PlayedCheckmark id="playedIndicator" translation="[120, 0]" />
        </Poster>

        <Rectangle id="progressBackground" visible="false" width="180" height="6" translation="[0,264]">
            <Rectangle id="progress" width="0" height="6" />
        </Rectangle>

        <Animation id="showProgressBar" duration="0.5" repeat="false" easeFunction="linear">
            <FloatFieldInterpolator id="showProgressBarField" key="[0.0, 1.0]" fieldToInterp="progress.width" />
        </Animation>
    </children>
    <interface>
        <field id="itemContent" type="node" onChange="itemContentChanged" />
        <field id="itemHasFocus" type="boolean" />
    </interface>
</component>