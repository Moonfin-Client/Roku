<?xml version="1.0" encoding="utf-8"?>
<component name="FavoritesScreen" extends="JFScreen">
    <children>
        <!-- Previous backdrop that stays visible until new one loads -->
        <Poster id="backdropPrev" loadDisplayMode="scaleToZoom" width="1920" height="1200" opacity="0.3" />

        <!-- Blurred backdrop base (new backdrop being loaded) -->
        <Poster id="backdrop" loadDisplayMode="scaleToZoom" width="1920" height="1200" opacity="0.3" />

        <!-- Color tint/scrim overlay for readability -->
        <Rectangle id="backdropTint" width="1920" height="1200" color="#F2000000" opacity="1.0" />

        <!-- Top details section for focused item -->
        <LayoutGroup id="detailsSection" translation="[100, 180]" layoutDirection="vert" itemSpacings="[10]">
            <Text id="itemTitle" font="font:LargeBoldSystemFont" width="1720" wrap="true" maxLines="2" />

            <!-- Single metadata row with all info -->
            <Text id="metadataText" font="font:SmallSystemFont" color="#FFFFFF" width="1720" />

            <Text id="itemOverview" font="font:MediumSystemFont" width="1720" wrap="true" maxLines="4" lineSpacing="-5" />
        </LayoutGroup>

        <!-- Row list for favorites categories -->
        <RowList
            id="favoritesRows"
            translation="[111, 450]"
            showRowLabel="true"
            vertFocusAnimationStyle="fixedFocus"
            rowFocusAnimationStyle="fixedFocusWrap"
            itemComponentName="FavoritesHomeItem"
            numRows="2"
            rowLabelOffset="[[0,20]]" />

        <!-- Loading Spinner -->
        <LayoutGroup id="loadingGroup" translation="[960, 540]" layoutDirection="vert" horizAlignment="center" visible="false">
            <Spinner id="loadingSpinner" />
            <Text id="loadingLabel" text="Loading favorites..." font="font:MediumSystemFont" color="#FFFFFF" translation="[0, 20]" />
        </LayoutGroup>

        <!-- Empty State -->
        <LayoutGroup id="emptyStateGroup" translation="[960, 400]" layoutDirection="vert" horizAlignment="center" visible="false">
            <Poster id="emptyIcon" uri="pkg:/images/icons/heart.png" width="80" height="80" blendColor="#666666" />
            <Text id="emptyLabel" text="No favorites yet" font="font:LargeBoldSystemFont" color="#FFFFFF" translation="[0, 20]" horizAlign="center" />
            <Text id="emptySubLabel" text="Add items from your library to see them here" font="font:MediumSystemFont" color="#888888" translation="[0, 10]" horizAlign="center" />
        </LayoutGroup>
    </children>
    <interface>
        <field id="selectedItem" type="node" alwaysNotify="true" />
        <field id="quickPlayNode" type="node" alwaysNotify="true" />
    </interface>
</component>