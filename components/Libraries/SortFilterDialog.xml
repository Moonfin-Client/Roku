<?xml version="1.0" encoding="utf-8"?>
<component name="SortFilterDialog" extends="Group">
    <children>
        <Rectangle id="overlay" width="1920" height="1080" opacity="0.75" />
        <Group translation="[100, 100]">
            <Rectangle id="background" width="1720" height="880" />

            <!-- Sort & Filter header -->
            <Text id="headerText" text="Sort &amp; Filter" horizAlign="Left"
                font="font:LargeSystemFont" height="100" width="1920" translation="[100, 50]" />
            <Rectangle id="headerBorder" width="1520" height="2" translation="[100, 120]" />

            <!-- Views section (left column) -->
            <Text id="viewsLabel" text="View" translation="[100, 140]"
                font="font:SmallBoldSystemFont" color="#888888" />

            <RadioButtonList id="viewMenu"
                itemSize="[400, 56]"
                itemSpacing="[0, 6]"
                vertFocusAnimationStyle="floatingFocus"
                numRows="6"
                focusFootprintBitmapUri=""
                translation="[100, 180]" />

            <!-- Sort By section (middle column) -->
            <Text id="sortByLabel" text="Sort By" translation="[560, 140]"
                font="font:SmallBoldSystemFont" color="#888888" />

            <RadioButtonList id="sortMenu"
                itemSize="[440, 56]"
                itemSpacing="[0, 6]"
                vertFocusAnimationStyle="floatingFocus"
                numRows="8"
                focusFootprintBitmapUri=""
                translation="[560, 180]" />

            <!-- Filters section (right column) -->
            <Text id="filtersLabel" text="Filters" translation="[1060, 140]"
                font="font:SmallBoldSystemFont" color="#888888" />

            <RadioButtonList id="filterMenu"
                translation="[1060, 180]"
                numRows="6"
                focusFootprintBitmapUri=""
                itemSize="[440, 56]"
                itemSpacing="[0, 6]" />
        </Group>
    </children>
    <interface>
        <field id="options" type="assocarray" onChange="optionsSet" />
        <field id="selectedView" type="string" value="" />
        <field id="selectedSort" type="string" value="" />
        <field id="filter" type="string" value="" />
        <field id="filterOptions" type="assocarray" value="{}" />
    </interface>
</component>