<?xml version="1.0" encoding="utf-8"?>
<component name="UpdateNotificationDialog" extends="Group">
    <interface>
        <field id="latestVersion" type="string" />
        <field id="currentVersion" type="string" />
        <field id="releaseNotes" type="string" />
        <field id="wasClosed" type="boolean" alwaysNotify="true" />
    </interface>

    <children>
        <Rectangle
            id="dialogBackground"
            width="900"
            height="700"
            translation="[510, 190]"
            color="0x000000FF" />

        <Label
            id="titleLabel"
            translation="[560, 230]"
            width="800"
            height="60"
            font="font:LargeBoldSystemFont"
            color="0xFFFFFFFF"
            horizAlign="center"
            vertAlign="center" />

        <Label
            id="versionLabel"
            translation="[560, 300]"
            width="800"
            height="40"
            font="font:MediumSystemFont"
            color="0xEFEFEFFF"
            horizAlign="center"
            vertAlign="center" />

        <Label
            id="messageLabel"
            translation="[560, 360]"
            width="800"
            height="280"
            font="font:SmallSystemFont"
            color="0xDDDDDDFF"
            wrap="true"
            vertAlign="top" />

        <LabelList
            id="buttonList"
            translation="[660, 680]"
            itemSize="[600, 60]"
            numRows="1"
            drawFocusFeedback="true"
            focusBitmapUri="pkg:/images/hd_focus.9.png"
            vertFocusAnimationStyle="fixedFocusWrap"
            vertAlign="center" />
    </children>
</component>