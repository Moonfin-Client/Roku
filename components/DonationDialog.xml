<?xml version="1.0" encoding="utf-8"?>
<component name="DonationDialog" extends="JFGroup">
    <children>
        <Poster
            id="dialogBackground"
            uri="pkg:/images/dialog.9.png"
            translation="[0, 0]"
        />

        <Label
            id="titleLabel"
            font="font:BoldSystemFontFile,40"
            color="0xFFFFFFFF"
            horizAlign="center"
        />

        <Label
            id="messageLabel"
            font="font:SystemFontFile,26"
            color="0xFFFFFFFF"
            horizAlign="center"
            wrap="true"
        />

        <Poster
            id="qrCodePoster"
            width="300"
            height="300"
        />

        <Label
            id="thanksLabel"
            font="font:SystemFontFile,28"
            color="0xFFFFFFFF"
            horizAlign="center"
            wrap="true"
        />

        <LabelList id="buttonList" vertFocusAnimationStyle="floatingFocus" textHorizAlign="center">
            <ContentNode id="buttonContent" role="content"></ContentNode>
        </LabelList>
    </children>

    <interface>
        <field id="wasClosed" type="boolean" alwaysNotify="true" />
    </interface>
</component>