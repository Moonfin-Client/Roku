<?xml version="1.0" encoding="utf-8"?>
<component name="DonationDialog" extends="JFGroup">
    <children>
        <Rectangle
            id="contentContainer"
            color="0x00000000"
            width="900"
            height="850"
        >
            <Poster
                id="dialogBackground"
                uri="pkg:/images/dialog.9.png"
                translation="[0, 0]"
                width="900"
                height="850"
            />

            <Rectangle id="textContainer" color="0x00000000" width="900" height="850" clippingRect="[0, 0, 900, 850]">
                <Label
                    id="titleLabel"
                    font="font:BoldSystemFontFile,40"
                    color="0xFFFFFFFF"
                    horizAlign="center"
                />

                <Label
                    id="messageLabel"
                    font="font:SystemFontFile,26"
                    color="0xFFFFFFFF"
                    horizAlign="center"
                    wrap="true"
                />

                <Label
                    id="thanksLabel"
                    font="font:SystemFontFile,28"
                    color="0xFFFFFFFF"
                    horizAlign="center"
                    wrap="true"
                />
            </Rectangle>

            <Poster
                id="qrCodePoster"
                width="300"
                height="300"
            />

            <LabelList id="buttonList" vertFocusAnimationStyle="floatingFocus" textHorizAlign="center">
                <ContentNode id="buttonContent" role="content"></ContentNode>
            </LabelList>
        </Rectangle>
    </children>

    <interface>
        <field id="wasClosed" type="boolean" alwaysNotify="true" />
    </interface>
</component>