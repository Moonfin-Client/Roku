<?xml version="1.0" encoding="utf-8"?>
<component name="OSD" extends="Group" initialFocus="videoPlayPause">
  <children>
    <!-- Header section with media info -->
    <LayoutGroup id="videoInfo" layoutDirection="vert" translation="[103,61]">
      <ScrollingText id="itemTitle" font="font:LargeBoldSystemFont" maxWidth="1500" />
      <LayoutGroup id="episodeInfo" layoutDirection="horiz" itemSpacings="[10]">
        <Text id="itemSeason" font="font:MediumSystemFont" color="0xffffffFF" />
        <Text id="itemEpisode" font="font:MediumSystemFont" color="0xffffffFF" />
        <Text id="itemEpisodeEnd" font="font:MediumSystemFont" color="0xffffffFF" />
      </LayoutGroup>
    </LayoutGroup>

    <Clock id="clock" translation="[1618, 61]" />

    <!-- Primary playback controls (above seekbar) -->
    <ButtonGroup id="videoControls" itemSpacings="[20]" layoutDirection="horiz" horizAlignment="left" translation="[103,820]">
      <IconButton id="videoPlayPause" padding="20" icon="pkg:/images/icons/play.png" height="80" width="120" />
      <IconButton id="rewind" padding="20" icon="pkg:/images/icons/rewinds.png" height="80" width="120" />
      <IconButton id="fastForward" padding="20" icon="pkg:/images/icons/fast_forward.png" height="80" width="120" />
      <IconButton id="showAudioMenu" padding="27" icon="pkg:/images/icons/select_audio.png" height="65" width="100" />
      <IconButton id="showSubtitleMenu" padding="0" icon="pkg:/images/icons/select_subtitle.png" height="65" width="100" />
    </ButtonGroup>

    <!-- Progress bar and time display -->
    <Group id="seekbarGroup" translation="[103,920]">
      <Rectangle id="progressBarBackground" width="1714" height="8">
        <Rectangle id="progressBar" width="0" height="8" />
      </Rectangle>
    </Group>
    <Poster id="progressIndicator" uri="pkg:/images/icons/circle.png" width="20" height="20" translation="[103,912]" loadDisplayMode="scaleToFit" />

    <Text id="videoEndingTime" font="font:SmallSystemFont" color="0xffffffFF" horizAlign="right" width="300" translation="[1517,820]" />
    <Text id="videoRemainingTime" font="font:MediumSystemFont" color="0xffffffFF" horizAlign="right" width="300" translation="[1517,975]" />

    <!-- Secondary options (below seekbar) -->
    <ButtonGroup id="optionControls" itemSpacings="[20]" layoutDirection="horiz" horizAlignment="left" translation="[103,975]">
      <IconButton id="chapterList" padding="16" icon="pkg:/images/icons/select_chapter.png" height="65" width="100" />
      <IconButton id="itemBack" padding="20" icon="pkg:/images/icons/previous.png" height="80" width="120" />
      <IconButton id="itemNext" padding="20" icon="pkg:/images/icons/play_next.png" height="80" width="120" />
      <IconButton id="showVideoInfoPopup" padding="16" icon="pkg:/images/icons/trailer.png" height="65" width="100" />
      <IconButton id="showVideoOverviewPopup" padding="25" icon="pkg:/images/icons/info.png" height="65" width="100" />
    </ButtonGroup>

    <!-- Item preview labels (show on focus) -->
    <ExpandingLabel
      translation="[200, 850]"
      id="previousItem"
      visible="false"
      icon=""
      iconHeight="32"
      iconWidth="32"
      iconAlign="left"
      text=""
      backgroundColor="0x00000095"
      maxWidth="500"
      horizAlign="left"
      horizOffset="64"
      alignmentSide="right"
      fontSize="27"
      padding="[20, 10]"
    />

    <ExpandingLabel
      translation="[1520, 850]"
      id="nextItem"
      visible="false"
      icon=""
      iconHeight="32"
      iconWidth="32"
      iconAlign="left"
      text=""
      backgroundColor="0x00000095"
      maxWidth="500"
      horizAlign="left"
      fontSize="27"
      padding="[20, 10]"
    />

    <Timer id="inactivityTimer" duration="1" repeat="true" />
  </children>
  <interface>
    <field id="itemTitleText" type="string" />
    <field id="itemSubtitleText" type="string" />
    <field id="seasonNumber" type="integer" />
    <field id="episodeNumber" type="integer" />
    <field id="episodeNumberEnd" type="integer" />
    <field id="logoImage" type="string" />
    <field id="previousItemIcon" type="string" />
    <field id="previousItemTitleText" type="string" />
    <field id="nextItemIcon" type="string" />
    <field id="nextItemTitleText" type="string" />
    <field id="inactiveTimeout" type="integer" />
    <field id="progressPercentage" type="float" />
    <field id="positionTime" type="float" />
    <field id="videoEndingTime" type="string" />
    <field id="remainingPositionTime" type="float" />
    <field id="playbackState" type="string" alwaysNotify="true" />
    <field id="action" type="string" alwaysNotify="true" />
    <field id="showChapterList" type="boolean" alwaysNotify="true" />
    <field id="hasFocus" type="boolean" alwaysNotify="true" />
  </interface>
</component>