<?xml version="1.0" encoding="utf-8"?>
<component name="GenreCard" extends="Group">
    <children>
        <!-- Backdrop image (landscape) -->
        <Poster id="backdropPoster" translation="[0, 0]"
            loadDisplayMode="scaleToZoom" />

        <!-- Dark gradient overlay -->
        <Rectangle id="overlay" color="#000000" opacity="0.5" />

        <!-- Genre info (centered) -->
        <Group id="infoGroup">
            <Text id="genreName" font="font:MediumBoldSystemFont"
                color="#FFFFFF" horizAlign="center" vertAlign="center" />
            <Text id="genreCount" font="font:SmallestSystemFont"
                color="#BBBBBB" horizAlign="center" vertAlign="center" />
        </Group>

        <!-- Placeholder when no backdrop -->
        <Rectangle id="placeholder" color="#1a1a2e" visible="false" />
        <Poster id="placeholderIcon" visible="false"
            uri="pkg:/images/icons/masks.png"
            blendColor="#444444" />
    </children>
    <interface>
        <field id="width" type="float" onChange="onSizeChange" />
        <field id="height" type="float" onChange="onSizeChange" />
        <field id="itemContent" type="node" onChange="onContentChanged" />
        <field id="itemHasFocus" type="boolean" onChange="onFocusChanged" alwaysNotify="true" />
    </interface>
</component>