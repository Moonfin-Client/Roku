<?xml version="1.0" encoding="utf-8"?>
<component name="UserItem" extends="Group">
  <children>
    <Group id="scaleGroup">
      <LayoutGroup layoutDirection="vert" translation="[0, 20]">
        <!-- Avatar -->
        <Poster
          id="profileImage"
          width="200"
          height="200"
          loadDisplayMode="scaleToFit"
          translation="[20, 0]" />

        <!-- User Name -->
        <Text
          id="profileName"
          horizAlign="center"
          vertAlign="center"
          font="font:MediumBoldSystemFont"
          color="0xFFFFFFFF"
          height="50"
          width="240" />

        <!-- Profile Type -->
        <Text
          id="profileType"
          horizAlign="center"
          vertAlign="top"
          font="font:SmallSystemFont"
          color="0xFFFFFF99"
          height="35"
          width="240" /> height="40" width="300" /> </LayoutGroup>

      <Poster
        id="forgetUserIcon"
        visible="false"
        width="30"
        height="30"
        uri="pkg:/images/icons/cancel.png"
        translation="[265, 5]" />
    </Group>
  </children>
  <interface>
    <field id="itemHasFocus" type="boolean" onChange="onFocusChanged" alwaysNotify="true" />
    <field id="itemContent" type="node" onChange="itemContentChanged" />
    <field id="drawFocusFeedback" type="boolean" value="true" />
  </interface>
</component>